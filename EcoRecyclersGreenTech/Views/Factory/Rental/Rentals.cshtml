@model List<EcoRecyclersGreenTech.Models.FactoryStore.FactoryStoreModel>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Manage Rentals";
    var nonce = Context.Items["CSPNonce"] as string ?? string.Empty;

    var userName = ViewBag.UserName as string ?? "User";
    var userType = ViewBag.UserType as string ?? (ViewBag.Type as string ?? "Factory");
    var isVerified = ViewBag.IsVerified as bool? ?? false;

    // ✅ Summary (زي Materials)
    var totalRentals = Model?.Count ?? 0;
    var totalOrders = Model?.Sum(x => x.OrdersCount) ?? 0;
    var totalActiveOrders = Model?.Sum(x => x.ActiveOrdersCount) ?? 0;
}

<div class="dashboard-premium">
    <div class="container">
        <div class="dashboard-shell">
            <div class="dashboard-content-wrap-full">
                <div class="dashboard-card-full">

                    <!-- Header -->
                    <div class="auth-head">
                        <div class="auth-logo">
                            <i class="bi bi-building"></i>
                        </div>
                        <h3 class="mb-1">Manage Rentals</h3>
                        <p class="mb-0 text-muted small">Welcome, <span class="fw-semibold">@userName</span> (@userType)</p>
                    </div>

                    <div class="auth-body">
                        <!-- Breadcrumb -->
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Manage Rentals</li>
                            </ol>
                        </nav>

                        <!-- Alerts -->
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show shadow-sm premium-card mb-3" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show shadow-sm premium-card mb-3" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Warning"] != null)
                        {
                            <div class="alert alert-warning alert-dismissible fade show shadow-sm premium-card mb-3" role="alert">
                                <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["Warning"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Summary cards -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <div class="premium-card">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <div class="text-muted small text-label">Total Rentals</div>
                                            <div class="h4 fw-bold mb-0 text-label">@totalRentals</div>
                                        </div>
                                        <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                                            <i class="bi bi-grid-3x3-gap fs-4"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="premium-card">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <div class="text-muted small text-label">Total Orders</div>
                                            <div class="h4 fw-bold mb-0 text-label">@totalOrders</div>
                                        </div>
                                        <div class="stat-icon bg-success bg-opacity-10 text-success">
                                            <i class="bi bi-receipt fs-4"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="premium-card">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <div class="text-muted small text-label">Active Orders</div>
                                            <div class="h4 fw-bold mb-0 text-label">@totalActiveOrders</div>
                                        </div>
                                        <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                                            <i class="bi bi-lightning-charge fs-4"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Header Action Bar -->
                        <div class="premium-card mb-4">
                            <div class="d-flex flex-wrap align-items-center justify-content-between">
                                <div class="d-flex align-items-center gap-3">
                                    <h4 class="mb-0 text-section-title">
                                        <i class="bi bi-buildings me-2 text-success"></i>Your Rental Properties
                                    </h4>

                                    @if (isVerified)
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-shield-check me-1"></i>Verified Seller
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark px-3 py-2">
                                            <i class="bi bi-shield-exclamation me-1"></i>Not Verified
                                        </span>
                                    }
                                </div>

                                <a asp-action="AddRental" class="btn btn-success auth-btn-success">
                                    <i class="bi bi-plus-circle me-2"></i>Add New Rental
                                </a>
                            </div>
                            <p class="text-muted small mt-2 mb-0">Add, edit, or remove your rental properties from the marketplace</p>
                        </div>

                        <!-- Filters -->
                        <div class="premium-card mb-4">
                            <div class="row g-3 align-items-center">
                                <div class="col-md-5">
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-search text-muted"></i>
                                        </span>
                                        <input type="text" id="searchInput" class="form-control border-start-0 text-label"
                                               placeholder="Search rentals by name, address, or seller...">
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <select id="sortFilter" class="form-select text-label">
                                        <option value="newest">Newest First</option>
                                        <option value="oldest">Oldest First</option>
                                        <option value="price_low">Price: Low to High</option>
                                        <option value="price_high">Price: High to Low</option>
                                        <option value="area_low">Area: Low to High</option>
                                        <option value="area_high">Area: High to Low</option>
                                        <option value="orders_high">Orders: High to Low</option>
                                        <option value="active_orders_high">Active Orders: High to Low</option>
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <button id="clearFilters" type="button" class="btn btn-outline-secondary w-100">
                                        <i class="bi bi-x-circle me-2"></i>Clear Filters
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Rentals Grid -->
                        @if (Model != null && Model.Any())
                        {
                            <div class="row g-4" id="rentalsGrid">
                                @foreach (var rental in Model)
                                {
                                    var locationText = rental.RentalAddress ?? rental.Name ?? "Rental";
                                    var statusText = rental.Status ?? "";

                                    var hasCoords = rental.RentalLatitude.HasValue && rental.RentalLongitude.HasValue;
                                    var mapsUrl = hasCoords
                                    ? $"https://www.google.com/maps?q={rental.RentalLatitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)},{rental.RentalLongitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)}"
                                    : null;

                                    // Images
                                    var imgs = (rental.ImageUrls ?? new List<string>())
                                    .Where(x => !string.IsNullOrWhiteSpace(x))
                                    .Select(x => x.Trim())
                                    .Distinct()
                                    .ToList();

                                    if (imgs.Count == 0 && !string.IsNullOrWhiteSpace(rental.ImageUrl))
                                    {
                                        imgs.Add(rental.ImageUrl!.Trim());
                                    }

                                    var hasImages = imgs.Count > 0;
                                    var carouselId = $"rentalCarousel_{rental.Id}";

                                    <div class="col-xl-3 col-lg-4 col-md-6 rental-card"
                                         data-price="@rental.Price"
                                         data-area="@(rental.RentalArea ?? 0)"
                                         data-date="@rental.CreatedAt.Ticks"
                                         data-orders="@rental.OrdersCount"
                                         data-activeorders="@rental.ActiveOrdersCount">

                                        <div class="premium-card h-100 rental-card-inner" style="border: 1px solid rgba(15,23,42,.08);">

                                            <div class="position-relative">
                                                @if (hasImages && imgs.Count > 1)
                                                {
                                                    <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
                                                        <div class="carousel-inner" style="border-radius: 12px; overflow: hidden;">
                                                            @for (int i = 0; i < imgs.Count; i++)
                                                            {
                                                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                                                    <img src="@imgs[i]" class="d-block w-100 rental-img"
                                                                         alt="Rental image @(i + 1)" loading="lazy" />
                                                                </div>
                                                            }
                                                        </div>

                                                        <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                            <span class="visually-hidden">Previous</span>
                                                        </button>
                                                        <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                            <span class="visually-hidden">Next</span>
                                                        </button>
                                                    </div>
                                                }
                                                else if (hasImages && imgs.Count == 1)
                                                {
                                                    <img src="@imgs[0]" class="w-100 rental-img" alt="Rental image"
                                                         style="border-radius: 12px;" loading="lazy" />
                                                }
                                                else
                                                {
                                                    <div class="rental-img d-flex align-items-center justify-content-center"
                                                         style="border-radius: 12px; background: linear-gradient(135deg, rgba(34,197,94,.08), rgba(20,184,166,.06));">
                                                        <i class="bi bi-building fs-1 text-success opacity-50"></i>
                                                    </div>
                                                }

                                                <!-- Badges -->
                                                <div class="position-absolute top-0 start-0 m-2 d-flex gap-2 flex-wrap">
                                                    @if (!string.IsNullOrWhiteSpace(statusText))
                                                    {
                                                        <span class="badge @GetStatusValidationClass(statusText) rounded-pill px-3 py-2">
                                                            <i class="bi @GetStatusIcon(statusText) me-1"></i>@statusText
                                                        </span>
                                                    }

                                                    <span class="badge bg-dark bg-opacity-75 rounded-pill px-3 py-2">
                                                        <i class="bi bi-receipt me-1"></i>@rental.OrdersCount
                                                    </span>

                                                    @if (rental.ActiveOrdersCount > 0)
                                                    {
                                                        <span class="badge bg-warning text-dark rounded-pill px-3 py-2">
                                                            <i class="bi bi-lightning-charge me-1"></i>@rental.ActiveOrdersCount Active
                                                        </span>
                                                    }
                                                </div>

                                                @if (rental.IsVerifiedSeller)
                                                {
                                                    <span class="position-absolute top-0 end-0 m-2 badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i>Verified
                                                    </span>
                                                }
                                            </div>

                                            <div class="mt-3">
                                                <h5 class="card-title text-truncate mb-2 text-label">@locationText</h5>

                                                <div class="row g-2 mb-2">
                                                    <div class="col-6">
                                                        <div class="text-muted small text-label">Price / Month</div>
                                                        <div class="fw-bold text-success text-label">$@rental.Price.ToString("N2")</div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="text-muted small text-label">Area</div>
                                                        <div class="fw-bold text-label">@((rental.RentalArea ?? 0).ToString("0.##")) m²</div>
                                                    </div>
                                                </div>

                                                <div class="text-muted small text-label">
                                                    <i class="bi bi-calendar3 me-1"></i>@rental.CreatedAt.ToString("MMM dd, yyyy")
                                                </div>

                                                <div class="text-muted small mt-1 text-label">
                                                    <i class="bi bi-person-badge me-1"></i>@(rental.SellerName ?? "Seller")
                                                </div>

                                                @if (!string.IsNullOrWhiteSpace(rental.RentalAddress))
                                                {
                                                    <div class="mt-2 small text-muted text-label">
                                                        <i class="bi bi-geo-alt me-1"></i>
                                                        <span class="od-wrap">@rental.RentalAddress</span>
                                                    </div>
                                                }

                                                @if (hasCoords)
                                                {
                                                    <div class="mt-2">
                                                        <a class="btn btn-sm btn-success auth-btn-success"
                                                           href="@mapsUrl" target="_blank" rel="noopener">
                                                            <i class="bi bi-map me-1"></i> View on Map
                                                        </a>
                                                    </div>
                                                }
                                            </div>

                                            <div class="mt-3 pt-3 border-top">
                                                <div class="d-flex justify-content-between align-items-center gap-2">
                                                    <a asp-action="EditRental" asp-route-id="@rental.Id"
                                                       class="btn btn-sm btn-outline-success w-50">
                                                        <i class="bi bi-pencil me-1"></i>Edit
                                                    </a>

                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-danger w-50"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteModal"
                                                            data-id="@rental.Id"
                                                            data-name="@locationText">
                                                        <i class="bi bi-trash me-1"></i>Delete
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="premium-card text-center py-5">
                                <div class="mb-4">
                                    <i class="bi bi-building fs-1 text-success opacity-50" style="font-size: 4rem;"></i>
                                </div>
                                <h3 class="h4 text-muted mb-3 text-label">No Rentals Found</h3>
                                <p class="text-muted mb-4 text-label">You haven't added any rental properties yet.</p>
                                <a asp-action="AddRental" class="btn btn-success auth-btn-success">
                                    <i class="bi bi-plus-circle me-2"></i>Add Your First Rental
                                </a>
                            </div>
                        }
                    </div>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content premium-card" style="border: 1px solid rgba(15,23,42,.08);">
                                <div class="modal-header border-bottom">
                                    <h5 class="modal-title text-label">
                                        <i class="bi bi-trash me-2 text-danger"></i>Confirm Delete
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <div class="modal-body">
                                    <div class="text-muted text-label">Are you sure you want to delete:</div>
                                    <div class="fw-bold mt-1 text-label" id="deleteRentalName">Rental</div>
                                    <div class="small text-muted mt-2 text-label">
                                        <i class="bi bi-exclamation-triangle me-1"></i>This action cannot be undone.
                                    </div>
                                </div>

                                <div class="modal-footer border-top">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>

                                    <form asp-action="DeleteRental" asp-controller="Factory" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="rentalId" id="deleteRentalId" value="" />
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="auth-foot">
                        <small class="text-muted">© @DateTime.Now.Year EcoRecyclers GreenTech • Rental Management</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusValidationClass(string status)
    {
        return (status ?? "").ToLower() switch
        {
            "available" => "bg-success",
            "soldout" or "sold out" => "bg-danger",
            "reserved" => "bg-warning text-dark",
            "inactive" => "bg-secondary",
            "pending" => "bg-info",
            "approved" => "bg-success",
            "rejected" => "bg-danger",
            "draft" => "bg-secondary",
            _ => "bg-primary"
        };
    }

    string GetStatusIcon(string status)
    {
        return (status ?? "").ToLower() switch
        {
            "available" => "bi-check-circle-fill",
            "soldout" or "sold out" => "bi-x-circle-fill",
            "reserved" => "bi-clock-fill",
            "inactive" => "bi-ban-fill",
            "pending" => "bi-hourglass-split",
            "approved" => "bi-check-circle-fill",
            "rejected" => "bi-x-circle-fill",
            "draft" => "bi-pencil-fill",
            _ => "bi-info-circle-fill"
        };
    }
}

<style nonce="@nonce">
    /* ===================== PREMIUM RENTAL MANAGEMENT STYLES ===================== */
    :root {
        --eco-green: #16a34a;
        --eco-teal: #14b8a6;
        --eco-sky: #38bdf8;
        --ink: #0f172a;
        --muted: #64748b;
        --glass: rgba(255,255,255,.72);
        --border: rgba(2,132,199,.18);
        --shadow: 0 22px 60px rgba(2,6,23,.12);
        --radius: 22px;
    }

    /* Animated background */
    body {
        background: radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.22), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.22), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.18), transparent 55%), linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        min-height: 100vh;
        animation: gradientShift 20s ease infinite alternate;
    }

    @@keyframes gradientShift {
        0% {
            background: radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.22), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.22), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.18), transparent 55%), linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        }

        50% {
            background: radial-gradient(1000px 600px at 25% 15%, rgba(56,189,248,.18), transparent 60%), radial-gradient(800px 450px at 75% 30%, rgba(34,197,94,.18), transparent 55%), radial-gradient(600px 400px at 45% 90%, rgba(20,184,166,.15), transparent 55%), linear-gradient(180deg, rgba(239,246,255,.92), rgba(240,253,250,.92));
        }

        100% {
            background: radial-gradient(950px 550px at 15% 22%, rgba(20,184,166,.20), transparent 60%), radial-gradient(850px 500px at 85% 20%, rgba(56,189,248,.15), transparent 55%), radial-gradient(750px 500px at 60% 80%, rgba(34,197,94,.15), transparent 55%), linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        }
    }

    /* Dashboard Shell */
    .dashboard-premium {
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        padding: 10px 0 25px;
    }

    .dashboard-shell {
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
        border-radius: var(--radius);
        border: 1px solid var(--border);
        background: rgba(255,255,255,.55);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: var(--shadow);
        overflow: hidden;
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Full Width Content */
    .dashboard-content-wrap-full {
        padding: 26px;
        background: rgba(255,255,255,.35);
    }

    .dashboard-card-full {
        width: 100%;
        border-radius: 20px;
        border: 1px solid rgba(15,23,42,.08);
        background: var(--glass);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 18px 45px rgba(2,6,23,.10);
        overflow: hidden;
    }

    /* Auth Components */
    .auth-head {
        padding: 22px 22px 14px;
        text-align: center;
        background: linear-gradient(135deg, rgba(34,197,94,.08), rgba(20,184,166,.06));
        border-bottom: 1px solid rgba(15,23,42,.06);
    }

    .auth-logo {
        width: 54px;
        height: 54px;
        border-radius: 16px;
        margin: 0 auto 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        background: linear-gradient(135deg, var(--eco-green), var(--eco-teal));
        box-shadow: 0 12px 25px rgba(20,184,166,.18);
        font-size: 1.35rem;
    }

    .auth-body {
        padding: 0 22px 18px;
    }

    .auth-foot {
        padding: 14px 22px;
        text-align: center;
        background: rgba(255,255,255,.55);
        border-top: 1px solid rgba(15,23,42,.08);
    }

    /* Premium Cards */
    .premium-card {
        border: 1px solid rgba(15,23,42,.08);
        background: rgba(255,255,255,.82);
        backdrop-filter: blur(8px);
        border-radius: 16px;
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

        .premium-card:hover {
            box-shadow: 0 15px 35px rgba(2,6,23,.10);
            transform: translateY(-3px);
        }

    /* Breadcrumb */
    .breadcrumb {
        background-color: transparent;
        padding: 12px 0;
        margin-bottom: 0;
    }

    .breadcrumb-item a {
        text-decoration: none;
        color: var(--muted);
        transition: color 0.2s ease;
    }

        .breadcrumb-item a:hover {
            color: var(--eco-green);
        }

    .breadcrumb-item.active {
        color: var(--ink);
        font-weight: 500;
    }

    /* Text Label Classes - Adaptive for Light/Dark Mode */
    .text-label {
        color: var(--ink) !important;
    }

    .text-section-title {
        color: var(--ink) !important;
        font-weight: 600;
    }

    .od-wrap {
        white-space: normal;
        overflow-wrap: anywhere;
        word-break: break-word;
    }

    /* Buttons */
    .auth-btn-success {
        border: 0 !important;
        border-radius: 999px !important;
        background: linear-gradient(90deg, var(--eco-green), var(--eco-teal)) !important;
        font-weight: 800;
        letter-spacing: .2px;
        box-shadow: 0 12px 26px rgba(22,163,74,.22);
        transition: transform .22s ease, box-shadow .22s ease, filter .22s ease;
        color: white !important;
        padding: 8px 16px !important;
        font-size: 0.875rem;
    }

        .auth-btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 34px rgba(20,184,166,.22);
            filter: brightness(1.02);
            color: white !important;
        }

    /* Rental Card Styles */
    .rental-card-inner {
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .rental-card-inner:hover {
            transform: translateY(-6px);
            box-shadow: 0 22px 45px rgba(2,6,23,.15) !important;
        }

    .rental-img {
        height: 200px;
        object-fit: cover;
        width: 100%;
        border-radius: 12px;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 14px;
        display: grid;
