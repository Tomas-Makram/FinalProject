<script nonce="@nonce">
    document.addEventListener('DOMContentLoaded', function () {

        // Delete modal wiring
        const deleteModal = document.getElementById('deleteModal');
        const deleteRentalName = document.getElementById('deleteRentalName');
        const deleteRentalId = document.getElementById('deleteRentalId');

        deleteModal?.addEventListener('show.bs.modal', function (event) {
            const btn = event.relatedTarget;
            const id = btn.getAttribute('data-id');
            const name = btn.getAttribute('data-name') || 'Rental';
            deleteRentalName.textContent = name;
            deleteRentalId.value = id;
        });

        const searchInput = document.getElementById('searchInput');
        const sortFilter = document.getElementById('sortFilter');
        const clearFilters = document.getElementById('clearFilters');

        function getCards() {
            return Array.from(document.querySelectorAll('.rental-card'));
        }

        function filterAndSort() {
            const term = (searchInput.value || '').toLowerCase();
            const sortBy = sortFilter.value;

            let cards = getCards();

            if (term) {
                cards = cards.filter(c => c.textContent.toLowerCase().includes(term));
            }

            cards.sort((a, b) => {
                const da = parseInt(a.dataset.date || '0');
                const db = parseInt(b.dataset.date || '0');

                const pa = parseFloat(a.dataset.price || '0');
                const pb = parseFloat(b.dataset.price || '0');

                const aa = parseFloat(a.dataset.area || '0');
                const ab = parseFloat(b.dataset.area || '0');

                const oa = parseInt(a.dataset.orders || '0');
                const ob = parseInt(b.dataset.orders || '0');

                const aca = parseInt(a.dataset.activeorders || '0');
                const acb = parseInt(b.dataset.activeorders || '0');

                switch (sortBy) {
                    case 'newest': return db - da;
                    case 'oldest': return da - db;
                    case 'price_low': return pa - pb;
                    case 'price_high': return pb - pa;
                    case 'area_low': return aa - ab;
                    case 'area_high': return ab - aa;
                    case 'orders_high': return ob - oa;
                    case 'active_orders_high': return acb - aca;
                    default: return 0;
                }
            });

            const grid = document.getElementById('rentalsGrid');
            if (!grid) return;

            getCards().forEach(c => c.style.display = 'none');
            cards.forEach(c => { c.style.display = 'block'; grid.appendChild(c); });
        }

        searchInput?.addEventListener('input', filterAndSort);
        sortFilter?.addEventListener('change', filterAndSort);

        clearFilters?.addEventListener('click', function () {
            searchInput.value = '';
            sortFilter.value = 'newest';
            filterAndSort();
            searchInput.focus();
        });

        filterAndSort();
    });
</script>