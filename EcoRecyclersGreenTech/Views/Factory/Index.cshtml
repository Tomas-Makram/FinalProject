@model EcoRecyclersGreenTech.Models.FactoryStore.Orders.DashboardModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Factory Dashboard";
    var nonce = Context.Items["CSPNonce"] as string ?? string.Empty;
    var userType = ViewBag.UserType as string ?? "Factory";
    var userName = ViewBag.userName as string ?? "User";
    var isVerified = ViewBag.IsVerified as bool? ?? false;
}

<div class="container-fluid py-4">

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row align-items-center mb-5">
        <div class="col-md-8">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-building-gear fs-1 text-primary"></i>
                </div>
                <div>
                    <h1 class="h2 mb-1 fw-bold">Factory Store Dashboard</h1>
                    <p class="text-muted mb-0">Manage your products, orders, and sales from one place</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-end">
            <div class="d-flex gap-2 justify-content-end">
                @if (!isVerified)
                {
                    <div class="alert alert-warning py-2 px-3 mb-0">
                        <i class="bi bi-shield-exclamation me-1"></i>
                        <small>Verification Required</small>
                    </div>
                }
                else
                {
                    <span class="badge bg-success rounded-pill p-2">
                        <i class="bi bi-shield-check me-1"></i>Verified Factory
                    </span>
                }
            </div>
            <small class="text-muted">Welcome back, @userName</small>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-primary border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-muted mb-2">Active Materials</h6>
                            <h3 class="mb-0 fw-bold">@Model.ActiveMaterials</h3>
                        </div>
                        <div class="ms-3">
                            <i class="bi bi-box fs-1 text-primary opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Materials" class="text-decoration-none small">
                            Manage <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-success border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-muted mb-2">Active Machines</h6>
                            <h3 class="mb-0 fw-bold">@Model.ActiveMachines</h3>
                        </div>
                        <div class="ms-3">
                            <i class="bi bi-gear fs-1 text-success opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Machines" class="text-decoration-none small">
                            Manage <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-warning border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-muted mb-2">Active Rentals</h6>
                            <h3 class="mb-0 fw-bold">@Model.ActiveRentals</h3>
                        </div>
                        <div class="ms-3">
                            <i class="bi bi-building fs-1 text-warning opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Rentals" class="text-decoration-none small">
                            Manage <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-info border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-muted mb-2">Active Auctions</h6>
                            <h3 class="mb-0 fw-bold">@Model.ActiveAuctions</h3>
                        </div>
                        <div class="ms-3">
                            <i class="bi bi-gavel fs-1 text-info opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Auctions" class="text-decoration-none small">
                            Manage <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-secondary border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-muted mb-2">Active Jobs</h6>
                            <h3 class="mb-0 fw-bold">@Model.ActiveJobs</h3>
                        </div>
                        <div class="ms-3">
                            <i class="bi bi-briefcase fs-1 text-secondary opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Jobs" class="text-decoration-none small">
                            Manage <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-danger border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-muted mb-2">Revenue</h6>
                            <h3 class="mb-0 fw-bold">$@Model.TotalRevenue.ToString("N2")</h3>
                        </div>
                        <div class="ms-3">
                            <i class="bi bi-currency-dollar fs-1 text-danger opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="#" class="text-decoration-none small">
                            View Report <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-5">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning-charge-fill me-2 text-warning"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a asp-action="AddMaterial" class="btn btn-outline-primary w-100 py-3 d-flex flex-column align-items-center">
                                <i class="bi bi-plus-circle-fill fs-2 mb-2"></i>
                                <span>Add Material</span>
                            </a>
                        </div>
                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a asp-action="AddMachine" class="btn btn-outline-success w-100 py-3 d-flex flex-column align-items-center">
                                <i class="bi bi-plus-circle-fill fs-2 mb-2"></i>
                                <span>Add Machine</span>
                            </a>
                        </div>
                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a asp-action="AddRental" class="btn btn-outline-warning w-100 py-3 d-flex flex-column align-items-center">
                                <i class="bi bi-plus-circle-fill fs-2 mb-2"></i>
                                <span>Add Rental</span>
                            </a>
                        </div>
                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a asp-action="AddAuction" class="btn btn-outline-info w-100 py-3 d-flex flex-column align-items-center">
                                <i class="bi bi-plus-circle-fill fs-2 mb-2"></i>
                                <span>Add Auction</span>
                            </a>
                        </div>
                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a asp-action="AddJob" class="btn btn-outline-secondary w-100 py-3 d-flex flex-column align-items-center">
                                <i class="bi bi-plus-circle-fill fs-2 mb-2"></i>
                                <span>Add Job</span>
                            </a>
                        </div>
                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a asp-action="Marketplace" asp-route-type="materials" class="btn btn-outline-dark w-100 py-3 d-flex flex-column align-items-center">
                                <i class="bi bi-shop fs-2 mb-2"></i>
                                <span>Browse Market</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-clock-history me-2 text-primary"></i>Recent Orders
                        </h5>
                        <a asp-action="Orders" class="btn btn-sm btn-outline-primary">
                            View All <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Customer</th>
                                        <th>Product</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-light text-dark">@order.OrderNumber</span>
                                            </td>
                                            <td>@order.CustomerName</td>
                                            <td>@order.ProductName</td>
                                            <td class="fw-bold">$@order.Amount.ToString("N2")</td>
                                            <td>
                                                <span class="badge @GetOrderStatusBadge(order.Status!)">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td class="text-muted">@order.OrderDate.ToString("MMM dd")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-cart-x fs-1 text-muted mb-3"></i>
                            <h5 class="text-muted">No Recent Orders</h5>
                            <p class="text-muted small mb-0">Your orders will appear here</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Store Summary -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-pie-chart-fill me-2 text-success"></i>Store Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="d-flex align-items-center">
                                <i class="bi bi-box me-2 text-primary"></i>
                                Materials
                            </span>
                            <span class="badge bg-primary rounded-pill">@Model.ActiveMaterials</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="d-flex align-items-center">
                                <i class="bi bi-gear me-2 text-success"></i>
                                Machines
                            </span>
                            <span class="badge bg-success rounded-pill">@Model.ActiveMachines</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="d-flex align-items-center">
                                <i class="bi bi-building me-2 text-warning"></i>
                                Rentals
                            </span>
                            <span class="badge bg-warning rounded-pill">@Model.ActiveRentals</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="d-flex align-items-center">
                                <i class="bi bi-gavel me-2 text-info"></i>
                                Auctions
                            </span>
                            <span class="badge bg-info rounded-pill">@Model.ActiveAuctions</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="d-flex align-items-center">
                                <i class="bi bi-briefcase me-2 text-secondary"></i>
                                Jobs
                            </span>
                            <span class="badge bg-secondary rounded-pill">@Model.ActiveJobs</span>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <div class="d-grid">
                            <a asp-action="Marketplace" class="btn btn-outline-primary">
                                <i class="bi bi-shop me-2"></i>Browse Marketplace
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetOrderStatusBadge(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "bg-warning",
            "confirmed" => "bg-info",
            "shipped" => "bg-primary",
            "delivered" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<style nonce="@nonce">
    .card {
        border-radius: 12px;
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

    .border-start {
        border-left-width: 4px !important;
    }

    .btn-outline-primary:hover,
    .btn-outline-success:hover,
    .btn-outline-warning:hover,
    .btn-outline-info:hover,
    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }

    .badge {
        font-weight: 500;
        padding: 0.35rem 0.65rem;
    }
</style>

<script nonce="@nonce">
    document.addEventListener('DOMContentLoaded', function () {
        // Auto-refresh stats every 2 minutes
        setInterval(function () {
            fetch('@Url.Action("GetDashboardStats", "FactoryStore")')
                .then(response => {
                    if (!response.ok) throw new Error('Network error');
                    return response.json();
                })
                .then(data => {
                    if (data.error) return;

                    // Update stats on the page
                    const elements = document.querySelectorAll('.fw-bold');
                    if (elements.length >= 6) {
                        elements[0].textContent = data.activeMaterials;
                        elements[1].textContent = data.activeMachines;
                        elements[2].textContent = data.activeRentals;
                        elements[3].textContent = data.activeAuctions;
                        elements[4].textContent = data.activeJobs;
                    }
                })
                .catch(error => console.error('Error updating stats:', error));
        }, 120000);

        // Initialize tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>