@model EcoRecyclersGreenTech.Models.FactoryStore.Orders.DashboardModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@using EcoRecyclersGreenTech.Models.FactoryStore.Orders

@{
    ViewData["Title"] = "Factory Dashboard";
    var nonce = Context.Items["CSPNonce"] as string ?? string.Empty;

    var userName = ViewBag.userName as string ?? "User";
    var isVerified = ViewBag.IsVerified as bool? ?? false;
}

<div class="dashboard-premium">
    <div class="container">
        <div class="dashboard-shell">
            <div class="dashboard-content-wrap-full">
                <div class="dashboard-card-full">
                    
                    <!-- Header -->
                    <div class="auth-head">
                        <div class="auth-logo">
                            <i class="bi bi-recycle"></i>
                        </div>
                        <h3 class="mb-1">Factory Store Dashboard</h3>
                        <p class="mb-0 text-muted small">Eco-friendly management for products, orders, and sales</p>
                    </div>

                    <div class="auth-body">
                        <!-- Alerts -->
                        <div class="alerts-container mb-4">
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert premium-alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert premium-alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }
                            @if (TempData["Warning"] != null)
                            {
                                <div class="alert premium-alert alert-warning alert-dismissible fade show shadow-sm" role="alert">
                                    <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["Warning"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            <!-- Verification Status -->
                            <div class="premium-card mb-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">Welcome back, <span class="text-success">@userName</span></h5>
                                        <p class="text-muted small mb-0">Manage your factory store operations efficiently</p>
                                    </div>
                                    <div>
                                        @if (!isVerified)
                                        {
                                            <span class="badge bg-warning px-3 py-2 rounded-pill">
                                                <i class="bi bi-shield-exclamation me-1"></i>Verification Required
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success px-3 py-2 rounded-pill">
                                                <i class="bi bi-shield-check me-1"></i>Verified Factory
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Stats (بدون Revenue) -->
                        <div class="row g-3 mb-4">
                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                <div class="card kpi-card shadow-sm">
                                    <div class="card-body">
                                        <div class="kpi-icon">
                                            <i class="bi bi-box text-success"></i>
                                        </div>
                                        <div class="text-muted small">Active Materials</div>
                                        <div class="fs-3 fw-bold">@Model.ActiveMaterials</div>
                                        <a asp-action="Materials" class="eco-link mt-2 d-block">Manage <i class="bi bi-arrow-right ms-1"></i></a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                <div class="card kpi-card shadow-sm">
                                    <div class="card-body">
                                        <div class="kpi-icon">
                                            <i class="bi bi-gear text-success"></i>
                                        </div>
                                        <div class="text-muted small">Active Machines</div>
                                        <div class="fs-3 fw-bold">@Model.ActiveMachines</div>
                                        <a asp-action="Machines" class="eco-link mt-2 d-block">Manage <i class="bi bi-arrow-right ms-1"></i></a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                <div class="card kpi-card shadow-sm">
                                    <div class="card-body">
                                        <div class="kpi-icon">
                                            <i class="bi bi-building text-success"></i>
                                        </div>
                                        <div class="text-muted small">Active Rentals</div>
                                        <div class="fs-3 fw-bold">@Model.ActiveRentals</div>
                                        <a asp-action="Rentals" class="eco-link mt-2 d-block">Manage <i class="bi bi-arrow-right ms-1"></i></a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                <div class="card kpi-card shadow-sm">
                                    <div class="card-body">
                                        <div class="kpi-icon">
                                            <i class="bi bi-gavel text-success"></i>
                                        </div>
                                        <div class="text-muted small">Active Auctions</div>
                                        <div class="fs-3 fw-bold">@Model.ActiveAuctions</div>
                                        <a asp-action="Auctions" class="eco-link mt-2 d-block">Manage <i class="bi bi-arrow-right ms-1"></i></a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                <div class="card kpi-card shadow-sm">
                                    <div class="card-body">
                                        <div class="kpi-icon">
                                            <i class="bi bi-briefcase text-success"></i>
                                        </div>
                                        <div class="text-muted small">Active Jobs</div>
                                        <div class="fs-3 fw-bold">@Model.ActiveJobs</div>
                                        <a asp-action="Jobs" class="eco-link mt-2 d-block">Manage <i class="bi bi-arrow-right ms-1"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions (بدون Marketplace) -->
                        <div class="premium-card mb-4">
                            <h5 class="mb-3"><i class="bi bi-lightning-charge-fill me-2 text-success"></i>Quick Actions</h5>
                            
                            <div class="row g-3">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                    <a asp-action="AddMaterial" class="quick-action-tile">
                                        <i class="bi bi-plus-circle text-success"></i>
                                        <span>Add Material</span>
                                    </a>
                                </div>
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                    <a asp-action="AddMachine" class="quick-action-tile">
                                        <i class="bi bi-plus-circle text-success"></i>
                                        <span>Add Machine</span>
                                    </a>
                                </div>
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                    <a asp-action="AddRental" class="quick-action-tile">
                                        <i class="bi bi-plus-circle text-success"></i>
                                        <span>Add Rental</span>
                                    </a>
                                </div>
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                    <a asp-action="AddAuction" class="quick-action-tile">
                                        <i class="bi bi-plus-circle text-success"></i>
                                        <span>Add Auction</span>
                                    </a>
                                </div>
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                    <a asp-action="AddJob" class="quick-action-tile">
                                        <i class="bi bi-plus-circle text-success"></i>
                                        <span>Add Job</span>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Orders + Store Summary -->
                        <div class="row g-4 align-items-stretch">
                            <!-- Orders -->
                            <div class="col-lg-8">
                                <div class="premium-card h-100">
                                    <h5 class="mb-3"><i class="bi bi-receipt-cutoff me-2 text-success"></i>Orders</h5>
                                    <p class="text-muted small mb-3">Click any order type to open its page</p>
                                    
                                    <div class="row g-3">
                                        <div class="col-xl-4 col-md-6">
                                            <a asp-action="MaterialOrders" class="order-tile">
                                                <div class="order-icon">
                                                    <i class="bi bi-box-seam"></i>
                                                </div>
                                                <div class="order-content">
                                                    <div class="order-title">Materials Orders</div>
                                                    <div class="order-subtitle">Open materials orders page</div>
                                                </div>
                                                <i class="bi bi-arrow-right-short order-arrow"></i>
                                            </a>
                                        </div>

                                        <div class="col-xl-4 col-md-6">
                                            <a asp-action="MachineOrders" class="order-tile">
                                                <div class="order-icon">
                                                    <i class="bi bi-gear"></i>
                                                </div>
                                                <div class="order-content">
                                                    <div class="order-title">Machines Orders</div>
                                                    <div class="order-subtitle">Open machines orders page</div>
                                                </div>
                                                <i class="bi bi-arrow-right-short order-arrow"></i>
                                            </a>
                                        </div>

                                        <div class="col-xl-4 col-md-6">
                                            <a asp-action="RentalOrders" class="order-tile">
                                                <div class="order-icon">
                                                    <i class="bi bi-building"></i>
                                                </div>
                                                <div class="order-content">
                                                    <div class="order-title">Rentals Orders</div>
                                                    <div class="order-subtitle">Open rentals orders page</div>
                                                </div>
                                                <i class="bi bi-arrow-right-short order-arrow"></i>
                                            </a>
                                        </div>

                                        <div class="col-xl-4 col-md-6">
                                            <a asp-action="AuctionOrders" class="order-tile">
                                                <div class="order-icon">
                                                    <i class="bi bi-gavel"></i>
                                                </div>
                                                <div class="order-content">
                                                    <div class="order-title">Auctions Orders</div>
                                                    <div class="order-subtitle">Open auctions orders page</div>
                                                </div>
                                                <i class="bi bi-arrow-right-short order-arrow"></i>
                                            </a>
                                        </div>

                                        <div class="col-xl-4 col-md-6">
                                            <a asp-action="JobOrders" class="order-tile">
                                                <div class="order-icon">
                                                    <i class="bi bi-briefcase"></i>
                                                </div>
                                                <div class="order-content">
                                                    <div class="order-title">Jobs Orders</div>
                                                    <div class="order-subtitle">Open jobs orders page</div>
                                                </div>
                                                <i class="bi bi-arrow-right-short order-arrow"></i>
                                            </a>
                                        </div>

                                        <!-- Empty space for balance in large screens -->
                                        <div class="col-xl-4 d-none d-xl-block"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Store Summary (بدون زر Marketplace) -->
                            <div class="col-lg-4">
                                <div class="premium-card h-100">
                                    <h5 class="mb-3"><i class="bi bi-pie-chart-fill me-2 text-success"></i>Store Summary</h5>
                                    
                                    <div class="store-summary">
                                        <div class="summary-item">
                                            <span class="summary-label">
                                                <i class="bi bi-box"></i> Materials
                                            </span>
                                            <span class="summary-count">@Model.ActiveMaterials</span>
                                        </div>
                                        <div class="summary-item">
                                            <span class="summary-label">
                                                <i class="bi bi-gear"></i> Machines
                                            </span>
                                            <span class="summary-count">@Model.ActiveMachines</span>
                                        </div>
                                        <div class="summary-item">
                                            <span class="summary-label">
                                                <i class="bi bi-building"></i> Rentals
                                            </span>
                                            <span class="summary-count">@Model.ActiveRentals</span>
                                        </div>
                                        <div class="summary-item">
                                            <span class="summary-label">
                                                <i class="bi bi-gavel"></i> Auctions
                                            </span>
                                            <span class="summary-count">@Model.ActiveAuctions</span>
                                        </div>
                                        <div class="summary-item">
                                            <span class="summary-label">
                                                <i class="bi bi-briefcase"></i> Jobs
                                            </span>
                                            <span class="summary-count">@Model.ActiveJobs</span>
                                        </div>
                                    </div>

                                    <div class="mt-4 pt-3 border-top small text-muted">
                                        <i class="bi bi-lightbulb me-1"></i> Tip: Manage your items from the cards above and track orders from Orders section.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="auth-foot">
                        <small class="text-muted">© @DateTime.Now.Year EcoRecyclers GreenTech • Factory Store Management</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* ===================== PREMIUM FACTORY DASHBOARD STYLES ===================== */
    :root {
        --eco-green: #16a34a;
        --eco-teal: #14b8a6;
        --eco-sky: #38bdf8;
        --ink: #0f172a;
        --muted: #64748b;
        --glass: rgba(255,255,255,.72);
        --border: rgba(2,132,199,.18);
        --shadow: 0 22px 60px rgba(2,6,23,.12);
        --radius: 22px;
    }

    /* Animated background */
    body {
        background: 
            radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.22), transparent 60%),
            radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.22), transparent 55%),
            radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.18), transparent 55%),
            linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        min-height: 100vh;
        animation: gradientShift 20s ease infinite alternate;
    }

    @@keyframes gradientShift {
        0% {
            background: 
                radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.22), transparent 60%),
                radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.22), transparent 55%),
                radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.18), transparent 55%),
                linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        }
        50% {
            background: 
                radial-gradient(1000px 600px at 25% 15%, rgba(56,189,248,.18), transparent 60%),
                radial-gradient(800px 450px at 75% 30%, rgba(34,197,94,.18), transparent 55%),
                radial-gradient(600px 400px at 45% 90%, rgba(20,184,166,.15), transparent 55%),
                linear-gradient(180deg, rgba(239,246,255,.92), rgba(240,253,250,.92));
        }
        100% {
            background: 
                radial-gradient(950px 550px at 15% 22%, rgba(20,184,166,.20), transparent 60%),
                radial-gradient(850px 500px at 85% 20%, rgba(56,189,248,.15), transparent 55%),
                radial-gradient(750px 500px at 60% 80%, rgba(34,197,94,.15), transparent 55%),
                linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        }
    }

    /* Dashboard Shell */
    .dashboard-premium {
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        padding: 10px 0 25px;
    }

    .dashboard-shell {
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
        border-radius: var(--radius);
        border: 1px solid var(--border);
        background: rgba(255,255,255,.55);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: var(--shadow);
        overflow: hidden;
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Full Width Content */
    .dashboard-content-wrap-full {
        padding: 26px;
        background: rgba(255,255,255,.35);
    }

    .dashboard-card-full {
        width: 100%;
        border-radius: 20px;
        border: 1px solid rgba(15,23,42,.08);
        background: var(--glass);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 18px 45px rgba(2,6,23,.10);
        overflow: hidden;
    }

    /* Auth Components */
    .auth-head {
        padding: 22px 22px 14px;
        text-align: center;
        background: linear-gradient(135deg, rgba(34,197,94,.08), rgba(20,184,166,.06));
        border-bottom: 1px solid rgba(15,23,42,.06);
    }

    .auth-logo {
        width: 54px;
        height: 54px;
        border-radius: 16px;
        margin: 0 auto 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        background: linear-gradient(135deg, var(--eco-green), var(--eco-teal));
        box-shadow: 0 12px 25px rgba(20,184,166,.18);
        font-size: 1.35rem;
    }

    .auth-body {
        padding: 0 22px 18px;
    }

    .auth-foot {
        padding: 14px 22px;
        text-align: center;
        background: rgba(255,255,255,.55);
        border-top: 1px solid rgba(15,23,42,.08);
    }

    /* Premium Cards */
    .premium-card {
        border: 1px solid rgba(15,23,42,.08);
        background: rgba(255,255,255,.82);
        backdrop-filter: blur(8px);
        border-radius: 16px;
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

        .premium-card:hover {
            box-shadow: 0 15px 35px rgba(2,6,23,.10);
            transform: translateY(-3px);
        }

    /* Premium Alerts */
    .premium-alert {
        border-radius: 14px;
        border: 1px solid rgba(15,23,42,.08);
        background: rgba(255,255,255,.85);
        backdrop-filter: blur(8px);
        margin-bottom: 15px;
    }

    /* KPI Cards */
    .kpi-card {
        border: 1px solid rgba(15,23,42,.08);
        background: rgba(255,255,255,.82);
        backdrop-filter: blur(8px);
        border-radius: 16px;
        transition: all 0.3s ease;
        text-align: center;
        height: 100%;
    }

        .kpi-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(2,6,23,.12);
        }

    .kpi-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: rgba(34,197,94,.12);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 12px;
        font-size: 1.5rem;
        color: var(--eco-green);
    }

    /* Quick Action Tiles */
    .quick-action-tile {
        height: 100px;
        width: 100%;
        border-radius: 16px;
        border: 1px solid rgba(15,23,42,.08);
        background: rgba(255,255,255,.85);
        backdrop-filter: blur(8px);
        box-shadow: 0 10px 22px rgba(2,6,23,.07);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        color: var(--ink);
        text-align: center;
    }

        .quick-action-tile i {
            font-size: 24px;
            color: var(--eco-green);
        }

        .quick-action-tile span {
            font-weight: 700;
            font-size: 0.9rem;
        }

        .quick-action-tile:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 34px rgba(2,6,23,.12);
            background: rgba(255,255,255,.95);
            border-color: rgba(34,197,94,.25);
        }

    /* Order Tiles */
    .order-tile {
        width: 100%;
        border-radius: 16px;
        border: 1px solid rgba(15,23,42,.08);
        background: rgba(255,255,255,.90);
        backdrop-filter: blur(8px);
        box-shadow: 0 10px 22px rgba(2,6,23,.07);
        padding: 16px;
        display: flex;
        align-items: center;
        gap: 14px;
        text-decoration: none;
        color: var(--ink);
        transition: all 0.3s ease;
        min-height: 90px;
    }

        .order-tile:hover {
            transform: translateY(-3px);
            box-shadow: 0 16px 34px rgba(2,6,23,.12);
            background: rgba(255,255,255,.95);
        }

    .order-icon {
        width: 48px;
        height: 48px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        background: linear-gradient(135deg, var(--eco-green), var(--eco-teal));
        box-shadow: 0 10px 22px rgba(34,197,94,.18);
        flex: 0 0 auto;
    }

        .order-icon i {
            font-size: 22px;
        }

    .order-content {
        flex: 1;
    }

    .order-title {
        font-weight: 900;
        line-height: 1.2;
        color: var(--ink);
    }

    .order-subtitle {
        font-size: 0.85rem;
        color: var(--muted);
        margin-top: 4px;
    }

    .order-arrow {
        font-size: 22px;
        color: var(--muted);
        transition: all 0.2s ease;
    }

    .order-tile:hover .order-arrow {
        transform: translateX(4px);
        color: var(--eco-green);
    }

    /* Store Summary */
    .store-summary {
        margin-top: 15px;
    }

    .summary-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px dashed rgba(15,23,42,.12);
    }

        .summary-item:last-child {
            border-bottom: none;
        }

    .summary-label {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 700;
        color: var(--ink);
    }

        .summary-label i {
            width: 36px;
            height: 36px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(34,197,94,.12);
            color: var(--eco-green);
            border: 1px solid rgba(34,197,94,.18);
        }

    .summary-count {
        font-weight: 900;
        color: var(--eco-green);
        background: rgba(34,197,94,.10);
        border: 1px solid rgba(34,197,94,.18);
        padding: 6px 12px;
        border-radius: 999px;
        min-width: 50px;
        text-align: center;
    }

    /* Links */
    .eco-link {
        text-decoration: none;
        font-weight: 700;
        color: var(--eco-green);
        font-size: 0.88rem;
        transition: all 0.2s ease;
    }

        .eco-link:hover {
            color: var(--eco-teal);
            text-decoration: underline;
        }

    /* Badges */
    .badge {
        border-radius: 8px;
        font-weight: 600;
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    /* ===================== DARK MODE TUNING ===================== */
    [data-bs-theme="dark"] body {
        background: 
            radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.12), transparent 60%),
            radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.12), transparent 55%),
            radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.10), transparent 55%),
            linear-gradient(180deg, rgba(2,6,23,.92), rgba(15,23,42,.92));
        animation: gradientShiftDark 20s ease infinite alternate;
    }

    @@keyframes gradientShiftDark {
        0% {
            background: 
                radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.12), transparent 60%),
