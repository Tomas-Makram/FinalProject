@model List<EcoRecyclersGreenTech.Models.FactoryStore.FactoryStoreModel>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Manage Auctions";
    var nonce = Context.Items["CSPNonce"] as string ?? string.Empty;

    var userName = ViewBag.UserName as string ?? "User";
    var userType = ViewBag.UserType as string ?? (ViewBag.Type as string ?? "Factory");
    var isVerified = ViewBag.IsVerified as bool? ?? false;

    // Summary
    var totalAuctions = Model?.Count ?? 0;
    var totalBids = Model?.Sum(x => x.OrdersCount) ?? 0;
    var totalActiveBids = Model?.Sum(x => x.ActiveOrdersCount) ?? 0;
    var endedAuctions = Model?.Count(x => x.IsAuctionEnded == true) ?? 0;

    string FormatAddr(string? a) => string.IsNullOrWhiteSpace(a) ? "Not provided" : a.Trim();
    string FormatCoord(decimal? v) => v.HasValue ? v.Value.ToString("0.######") : "-";
}

<div class="dashboard-premium">
    <div class="container">
        <div class="dashboard-shell">
            <div class="dashboard-content-wrap-full">
                <div class="dashboard-card-full">

                    <!-- Header -->
                    <div class="auth-head">
                        <div class="auth-logo">
                            <i class="bi bi-hammer"></i>
                        </div>
                        <h3 class="mb-1">Manage Auctions</h3>
                        <p class="mb-0 text-muted small">Add, edit, or remove your auctions from the marketplace</p>
                    </div>

                    <div class="auth-body">
                        <!-- Breadcrumb -->
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Manage Auctions</li>
                            </ol>
                        </nav>

                        <!-- Alerts -->
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show shadow-sm premium-card mb-3" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show shadow-sm premium-card mb-3" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Warning"] != null)
                        {
                            <div class="alert alert-warning alert-dismissible fade show shadow-sm premium-card mb-3" role="alert">
                                <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["Warning"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Header Action Bar -->
                        <div class="premium-card mb-4">
                            <div class="d-flex flex-wrap align-items-center justify-content-between">
                                <div>
                                    <h4 class="mb-0 text-section-title">
                                        <i class="bi bi-hammer me-2 text-warning"></i>Your Auctions Management
                                    </h4>
                                    <p class="text-muted small mt-1 mb-0 text-label">Welcome, <span class="fw-semibold">@userName</span> (@userType) - Manage all your auctions</p>
                                </div>

                                <div class="d-flex align-items-center gap-2">
                                    @if (isVerified)
                                    {
                                        <span class="badge bg-success rounded-pill px-3 py-2">
                                            <i class="bi bi-shield-check me-1"></i>Verified
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill px-3 py-2">
                                            <i class="bi bi-shield-exclamation me-1"></i>Not Verified
                                        </span>
                                    }

                                    <a asp-action="AddAuction" class="auth-btn-success">
                                        <i class="bi bi-plus-circle me-2"></i>Add New Auction
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Summary cards -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-3">
                                <div class="premium-card stat-card">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <div class="text-muted small text-label">Total Auctions</div>
                                            <div class="h4 fw-bold mb-0 text-label">@totalAuctions</div>
                                        </div>
                                        <div class="stat-icon bg-primary-subtle text-primary">
                                            <i class="bi bi-grid-3x3-gap"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="premium-card stat-card">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <div class="text-muted small text-label">Total Bids</div>
                                            <div class="h4 fw-bold mb-0 text-label">@totalBids</div>
                                        </div>
                                        <div class="stat-icon bg-success-subtle text-success">
                                            <i class="bi bi-receipt"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="premium-card stat-card">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <div class="text-muted small text-label">Active Bids</div>
                                            <div class="h4 fw-bold mb-0 text-label">@totalActiveBids</div>
                                        </div>
                                        <div class="stat-icon bg-warning-subtle text-warning">
                                            <i class="bi bi-lightning-charge"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="premium-card stat-card">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <div class="text-muted small text-label">Ended Auctions</div>
                                            <div class="h4 fw-bold mb-0 text-label">@endedAuctions</div>
                                        </div>
                                        <div class="stat-icon bg-danger-subtle text-danger">
                                            <i class="bi bi-calendar-x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Filters -->
                        <div class="premium-card mb-4">
                            <div class="card-body p-0">
                                <div class="row g-3 align-items-center">
                                    <div class="col-md-5">
                                        <div class="input-group">
                                            <span class="input-group-text bg-light-subtle border-end-0">
                                                <i class="bi bi-search text-muted"></i>
                                            </span>
                                            <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Search auctions...">
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <select id="sortFilter" class="form-select">
                                            <option value="newest">Newest First</option>
                                            <option value="oldest">Oldest First</option>
                                            <option value="price_low">Start Price: Low to High</option>
                                            <option value="price_high">Start Price: High to Low</option>
                                            <option value="bids_high">Bids: High to Low</option>
                                            <option value="active_bids_high">Active Bids: High to Low</option>
                                            <option value="ending_soon">Ending Soon</option>
                                            <option value="ending_late">Ending Late</option>
                                        </select>
                                    </div>

                                    <div class="col-md-3">
                                        <button id="clearFilters" type="button" class="btn btn-outline-secondary w-100">
                                            <i class="bi bi-x-circle me-2"></i>Clear
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Grid -->
                        @if (Model != null && Model.Any())
                        {
                            <div class="row g-4" id="auctionsGrid">
                                @foreach (var auction in Model)
                                {
                                    // Images
                                    var imgs = (auction.ImageUrls ?? new List<string>())
                                    .Where(x => !string.IsNullOrWhiteSpace(x))
                                    .Select(x => x.Trim())
                                    .Distinct()
                                    .ToList();

                                    if (imgs.Count == 0 && !string.IsNullOrWhiteSpace(auction.ImageUrl))
                                        imgs.Add(auction.ImageUrl!.Trim());

                                    var hasImages = imgs.Count > 0;
                                    var carouselId = $"auctionCarousel_{auction.Id}";

                                    var statusText = auction.Status ?? "";
                                    var endTicks = auction.AuctionEndDate?.Ticks ?? long.MaxValue;
                                    var daysRemaining = auction.DaysRemaining ?? int.MaxValue;

                                    var isEnded = auction.IsAuctionEnded == true;
                                    var isConfirmed = auction.ConfirmedOrderId.HasValue;

                                    // Location for map button
                                    var lat = auction.AuctionLatitude;
                                    var lng = auction.AuctionLongitude;
                                    var addr = auction.AuctionAddress;

                                    <div class="col-xl-3 col-lg-4 col-md-6 auction-card"
                                         data-price="@auction.Price"
                                         data-date="@auction.CreatedAt.Ticks"
                                         data-orders="@auction.OrdersCount"
                                         data-activeorders="@auction.ActiveOrdersCount"
                                         data-end="@endTicks"
                                         data-days="@daysRemaining">

                                        <div class="premium-card auction-card-inner h-100">

                                            <div class="position-relative">

                                                @if (hasImages && imgs.Count > 1)
                                                {
                                                    <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
                                                        <div class="carousel-inner">
                                                            @for (int i = 0; i < imgs.Count; i++)
                                                            {
                                                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                                                    <img src="@imgs[i]" class="d-block w-100 auction-img" alt="Auction image @(i + 1)" />
                                                                </div>
                                                            }
                                                        </div>

                                                        <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                            <span class="visually-hidden">Previous</span>
                                                        </button>
                                                        <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                            <span class="visually-hidden">Next</span>
                                                        </button>
                                                    </div>
                                                }
                                                else if (hasImages && imgs.Count == 1)
                                                {
                                                    <img src="@imgs[0]" class="card-img-top auction-img" alt="Auction image" />
                                                }
                                                else
                                                {
                                                    <div class="card-img-top bg-light-subtle d-flex align-items-center justify-content-center auction-img">
                                                        <i class="bi bi-image fs-1 text-muted"></i>
                                                    </div>
                                                }

                                                <!-- Badges -->
                                                <div class="position-absolute top-0 start-0 m-2 d-flex gap-2 flex-wrap">
                                                    @if (!string.IsNullOrWhiteSpace(statusText))
                                                    {
                                                        <span class="badge @GetStatusValidationClass(statusText) rounded-pill px-3 py-2">
                                                            <i class="bi @GetStatusIcon(statusText) me-1"></i>@statusText
                                                        </span>
                                                    }

                                                    <span class="badge bg-dark bg-opacity-75 rounded-pill px-3 py-2">
                                                        <i class="bi bi-receipt me-1"></i>@auction.OrdersCount Bids
                                                    </span>

                                                    @if (auction.ActiveOrdersCount > 0)
                                                    {
                                                        <span class="badge bg-warning text-dark rounded-pill px-3 py-2">
                                                            <i class="bi bi-lightning-charge me-1"></i>@auction.ActiveOrdersCount Active
                                                        </span>
                                                    }
                                                </div>

                                                <!-- End / Days Remaining / Confirmed -->
                                                <div class="position-absolute top-0 end-0 m-2 d-flex flex-column gap-2 align-items-end">
                                                    @if (isConfirmed)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-patch-check-fill me-1"></i>Confirmed
                                                        </span>
                                                    }
                                                    else if (isEnded)
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-calendar-x me-1"></i>Ended
                                                        </span>
                                                    }
                                                    else if (auction.DaysRemaining.HasValue && auction.DaysRemaining.Value != int.MaxValue)
                                                    {
                                                        <span class="badge bg-info text-dark">
                                                            <i class="bi bi-hourglass-split me-1"></i>@($"{auction.DaysRemaining} days left")
                                                        </span>
                                                    }
                                                </div>
                                            </div>

                                            <div class="card-body">
                                                <h5 class="card-title text-truncate mb-2 text-label">@auction.Name</h5>

                                                <div class="row g-2 mb-2">
                                                    <div class="col-6">
                                                        <div class="text-muted small text-label">Start Price</div>
                                                        <div class="fw-bold text-warning text-label">$@auction.Price.ToString("N2")</div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="text-muted small text-label">Quantity</div>
                                                        <div class="fw-bold text-label">@auction.AvailableQuantity</div>
                                                    </div>
                                                </div>

                                                <div class="text-muted small text-label">
                                                    <i class="bi bi-calendar3 me-1"></i>
                                                    Start: @(auction.AuctionStartDate?.ToString("MMM dd, yyyy") ?? auction.CreatedAt.ToString("MMM dd, yyyy"))
                                                </div>

                                                <div class="text-muted small mt-1 text-label">
                                                    <i class="bi bi-calendar-x me-1"></i>
                                                    End: @(auction.AuctionEndDate?.ToString("MMM dd, yyyy") ?? "No end date")
                                                </div>

                                                <!-- Pickup Location block -->
                                                <div class="border rounded-3 p-2 bg-light-subtle mt-3">
                                                    <div class="small text-muted text-label">Pickup location</div>

                                                    <div class="fw-semibold text-truncate text-label">
                                                        <i class="bi bi-geo-alt me-1"></i>@FormatAddr(addr)
                                                    </div>

                                                    <div class="small text-muted mt-1 text-label">
                                                        <i class="bi bi-pin-map me-1"></i>
                                                        Lat: @FormatCoord(lat) , Lng: @FormatCoord(lng)
                                                    </div>

                                                    <div class="d-flex gap-2 mt-2">
                                                        <button type="button"
                                                                class="btn btn-sm btn-outline-secondary w-100 btnShowMap"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#mapModal"
                                                                data-id="@auction.Id"
                                                                data-lat="@(lat?.ToString() ?? "")"
                                                                data-lng="@(lng?.ToString() ?? "")"
                                                                data-address="@FormatAddr(addr)">
                                                            <i class="bi bi-map me-1"></i>Map
                                                        </button>

                                                        <a class="btn btn-sm btn-outline-primary w-100"
                                                           target="_blank" rel="noopener"
                                                           href="https://www.google.com/maps?q=@(lat ?? 30.0444m),@(lng ?? 31.2357m)">
                                                            <i class="bi bi-box-arrow-up-right me-1"></i>Open
                                                        </a>
                                                    </div>
                                                </div>

                                                <!-- Top bidder -->
                                                <div class="border rounded-3 p-2 bg-light-subtle mt-3">
                                                    <div class="small text-muted text-label">Top bidder so far</div>

                                                    <div class="fw-semibold text-truncate text-label">
                                                        @(!string.IsNullOrWhiteSpace(auction.TopBidderName) ? auction.TopBidderName : "No bids yet")
                                                    </div>

                                                    @if (auction.TopBidAmount.HasValue)
                                                    {
                                                        <div class="small text-muted text-label">
                                                            <i class="bi bi-trophy me-1"></i>
                                                            $@auction.TopBidAmount.Value.ToString("N2")
                                                            @if (auction.TopBidAt.HasValue)
                                                            {
                                                                <span class="ms-2">(@auction.TopBidAt.Value.ToString("MMM dd, yyyy"))</span>
                                                            }
                                                        </div>
                                                    }
                                                </div>

                                                <!-- Thumbnails -->
                                                @if (imgs.Count > 1)
                                                {
                                                    <div class="d-flex gap-2 flex-wrap mt-3">
                                                        @foreach (var url in imgs.Take(3))
                                                        {
                                                            <img src="@url" class="thumb rounded" alt="thumb">
                                                        }
                                                    </div>
                                                }

                                                <div class="text-muted small mt-3 text-label">
                                                    <i class="bi bi-clock me-1"></i>Created: @auction.CreatedAt.ToString("MMM dd, yyyy")
                                                </div>
                                            </div>

                                            <div class="card-footer bg-transparent border-top mt-auto">
                                                <div class="d-flex justify-content-between align-items-center gap-2">
                                                    <a asp-action="EditAuction" asp-route-id="@auction.Id"
                                                       class="btn btn-sm btn-outline-primary w-50">
                                                        <i class="bi bi-pencil me-1"></i>Edit
                                                    </a>

                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-danger w-50"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteModal"
                                                            data-id="@auction.Id"
                                                            data-name="@auction.Name">
                                                        <i class="bi bi-trash me-1"></i>Delete
                                                    </button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="premium-card text-center py-5">
                                <div class="mb-4">
                                    <i class="bi bi-hammer fs-1 text-warning opacity-50" style="font-size: 4rem;"></i>
                                </div>
                                <h3 class="h4 text-muted mb-3 text-label">No Auctions Found</h3>
                                <p class="text-muted mb-4 text-label">You haven't added any auctions yet.</p>
                                <a asp-action="AddAuction" class="auth-btn-success">
                                    <i class="bi bi-plus-circle me-2"></i>Add First Auction
                                </a>
                            </div>
                        }
                    </div>

                    <div class="auth-foot">
                        <small class="text-muted">© @DateTime.Now.Year EcoRecyclers GreenTech • Auctions Management</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Map Modal -->
<div class="modal fade" id="mapModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-label">
                    <i class="bi bi-geo-alt-fill me-2 text-danger"></i>Pickup Location Map
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="alert alert-info py-2 mb-3">
                    <div class="small text-label"><b>Address:</b> <span id="mapAddressText" class="text-label">-</span></div>
                    <div class="small mt-1 text-label"><b>Coords:</b> <span id="mapCoordsText" class="text-label">-</span></div>
                </div>

                <div id="leafletMap"
                     style="height:420px;border-radius:12px;border:1px solid rgba(15,23,42,.12)"></div>

                <div class="small text-muted mt-2 text-label">
                    Tip: If coords are missing, map will fallback to Cairo.
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-label">
                    <i class="bi bi-trash me-2 text-danger"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="text-muted text-label">Are you sure you want to delete:</div>
                <div class="fw-bold mt-1 text-label" id="deleteAuctionName">Auction</div>
                <div class="small text-muted mt-2 text-label">This action cannot be undone.</div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>

                <form asp-action="DeleteAuction" asp-controller="Factory" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" id="deleteAuctionId" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusValidationClass(string status)
    {
        return (status ?? "").ToLower() switch
        {
            "available" => "bg-success",
            "soldout" or "sold out" => "bg-danger",
            "reserved" => "bg-warning text-dark",
            "inactive" => "bg-secondary",
            "pending" => "bg-info",
            "approved" => "bg-success",
            "rejected" => "bg-danger",
            "draft" => "bg-secondary",
            "removedbyfactory" or "removed" => "bg-dark",
            _ => "bg-primary"
        };
    }

    string GetStatusIcon(string status)
    {
        return (status ?? "").ToLower() switch
        {
            "available" => "bi-check-circle-fill",
            "soldout" or "sold out" => "bi-x-circle-fill",
            "reserved" => "bi-clock-fill",
            "inactive" => "bi-ban-fill",
            "pending" => "bi-hourglass-split",
            "approved" => "bi-check-circle-fill",
            "rejected" => "bi-x-circle-fill",
            "draft" => "bi-pencil-fill",
            "removedbyfactory" or "removed" => "bi-trash-fill",
            _ => "bi-info-circle-fill"
        };
    }
}

<style nonce="@nonce">
    /* ===================== PREMIUM AUCTION MANAGEMENT STYLES ===================== */
    :root {
        --eco-gold: #f59e0b;
        --eco-amber: #fbbf24;
        --eco-orange: #fb923c;
        --ink: #0f172a;
        --muted: #64748b;
        --glass: rgba(255,255,255,.72);
        --border: rgba(245,158,11,.18);
        --shadow: 0 22px 60px rgba(2,6,23,.12);
        --radius: 22px;
    }

    /* Animated background with gold/orange theme */
    body {
        background: radial-gradient(900px 500px at 18% 18%, rgba(245,158,11,.15), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(251,191,36,.15), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(251,146,60,.12), transparent 55%), linear-gradient(180deg, rgba(254,252,232,.92), rgba(255,250,240,.92));
        min-height: 100vh;
        animation: gradientShift 20s ease infinite alternate;
    }

    @@keyframes gradientShift {
        0% {
            background: radial-gradient(900px 500px at 18% 18%, rgba(245,158,11,.15), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(251,191,36,.15), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(251,146,60,.12), transparent 55%), linear-gradient(180deg, rgba(254,252,232,.92), rgba(255,250,240,.92));
        }

        50% {
            background: radial-gradient(1000px 600px at 25% 15%, rgba(251,191,36,.12), transparent 60%), radial-gradient(800px 450px at 75% 30%, rgba(245,158,11,.12), transparent 55%), radial-gradient(600px 400px at 45% 90%, rgba(251,146,60,.10), transparent 55%), linear-gradient(180deg, rgba(255,250,240,.92), rgba(254,252,232,.92));
        }

        100% {
            background: radial-gradient(950px 550px at 15% 22%, rgba(251,146,60,.14), transparent 60%), radial-gradient(850px 500px at 85% 20%, rgba(251,191,36,.10), transparent 55%), radial-gradient(750px 500px at 60% 80%, rgba(245,158,11,.10), transparent 55%), linear-gradient(180deg, rgba(254,252,232,.92), rgba(255,250,240,.92));
        }
    }

    /* Dashboard Shell */
    .dashboard-premium {
        min-height: calc(100vh - 140px);
