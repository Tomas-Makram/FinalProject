@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
    <script nonce="@nonce" src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>

    <script nonce="@nonce">
        document.addEventListener('DOMContentLoaded', function () {
            // Delete modal wiring
            const deleteModal = document.getElementById('deleteModal');
            const deleteAuctionName = document.getElementById('deleteAuctionName');
            const deleteAuctionId = document.getElementById('deleteAuctionId');

            deleteModal?.addEventListener('show.bs.modal', function (event) {
                const btn = event.relatedTarget;
                const id = btn.getAttribute('data-id');
                const name = btn.getAttribute('data-name') || 'Auction';
                deleteAuctionName.textContent = name;
                deleteAuctionId.value = id;
            });

            // Search + sort
            const searchInput = document.getElementById('searchInput');
            const sortFilter = document.getElementById('sortFilter');
            const clearFilters = document.getElementById('clearFilters');

            function getCards() {
                return Array.from(document.querySelectorAll('.auction-card'));
            }

            function filterAndSort() {
                const term = (searchInput.value || '').toLowerCase();
                const sortBy = sortFilter.value;

                let cards = getCards();

                if (term) cards = cards.filter(c => c.textContent.toLowerCase().includes(term));

                cards.sort((a, b) => {
                    const da = parseInt(a.dataset.date || '0');
                    const db = parseInt(b.dataset.date || '0');
                    const pa = parseFloat(a.dataset.price || '0');
                    const pb = parseFloat(b.dataset.price || '0');
                    const oa = parseInt(a.dataset.orders || '0');
                    const ob = parseInt(b.dataset.orders || '0');
                    const aca = parseInt(a.dataset.activeorders || '0');
                    const acb = parseInt(b.dataset.activeorders || '0');
                    const daysa = parseInt(a.dataset.days || '2147483647');
                    const daysb = parseInt(b.dataset.days || '2147483647');

                    switch (sortBy) {
                        case 'newest': return db - da;
                        case 'oldest': return da - db;
                        case 'price_low': return pa - pb;
                        case 'price_high': return pb - pa;
                        case 'bids_high': return ob - oa;
                        case 'active_bids_high': return acb - aca;
                        case 'ending_soon': return daysa - daysb;
                        case 'ending_late': return daysb - daysa;
                        default: return 0;
                    }
                });

                const grid = document.getElementById('auctionsGrid');
                if (!grid) return;

                getCards().forEach(c => c.style.display = 'none');
                cards.forEach(c => { c.style.display = 'block'; grid.appendChild(c); });
            }

            searchInput?.addEventListener('input', filterAndSort);
            sortFilter?.addEventListener('change', filterAndSort);

            clearFilters?.addEventListener('click', function () {
                searchInput.value = '';
                sortFilter.value = 'newest';
                filterAndSort();
                searchInput.focus();
            });

            filterAndSort();

            // Leaflet modal map
            const mapModal = document.getElementById('mapModal');
            const mapAddressText = document.getElementById('mapAddressText');
            const mapCoordsText = document.getElementById('mapCoordsText');

            let leafletMap = null;
            let leafletMarker = null;

            function toFloat(v) {
                if (!v) return NaN;
                return parseFloat(String(v).replace(',', '.'));
            }

            mapModal?.addEventListener('shown.bs.modal', function (event) {
                const btn = event.relatedTarget;
                const latRaw = btn.getAttribute('data-lat');
                const lngRaw = btn.getAttribute('data-lng');
                const addr = btn.getAttribute('data-address') || '-';

                let lat = toFloat(latRaw);
                let lng = toFloat(lngRaw);

                // fallback Cairo
                if (Number.isNaN(lat) || Number.isNaN(lng)) {
                    lat = 30.0444;
                    lng = 31.2357;
                }

                mapAddressText.textContent = addr;
                mapCoordsText.textContent = `Lat: ${lat.toFixed(6)} , Lng: ${lng.toFixed(6)}`;

                // init map once
                if (!leafletMap) {
                    leafletMap = L.map('leafletMap', { zoomControl: true }).setView([lat, lng], 15);

                    L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
                        maxZoom: 19,
                        attribution: '&copy; OpenStreetMap &copy; CARTO'
                    }).addTo(leafletMap);

                    leafletMarker = L.marker([lat, lng]).addTo(leafletMap);
                } else {
                    leafletMap.setView([lat, lng], 15);
                    leafletMarker?.setLatLng([lat, lng]);
                }

                setTimeout(() => leafletMap.invalidateSize(), 250);
            });

            mapModal?.addEventListener('hidden.bs.modal', function () {
                // optional: keep map instance for next open (faster)
            });
        });
    </script>
