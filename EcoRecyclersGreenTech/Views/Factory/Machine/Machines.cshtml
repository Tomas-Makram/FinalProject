@model List<EcoRecyclersGreenTech.Models.FactoryStore.FactoryStoreModel>

@{
    ViewData["Title"] = "Manage Machines";
    var nonce = Context.Items["CSPNonce"] as string ?? string.Empty;
}

<div class="container-fluid py-4">

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
            <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }

    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-gear-fill fs-1 text-success"></i>
                </div>
                <div>
                    <h1 class="h2 mb-1 fw-bold">Manage Machines</h1>
                    <p class="text-muted mb-0">Add, edit, or remove your machines from the marketplace</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 text-end">
            <a asp-action="AddMachine" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Add New Machine
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Search machines...">
                    </div>
                </div>

                <div class="col-md-4">
                    <select id="sortFilter" class="form-select">
                        <option value="newest">Newest First</option>
                        <option value="oldest">Oldest First</option>
                        <option value="price_low">Price: Low to High</option>
                        <option value="price_high">Price: High to Low</option>
                        <option value="quantity_low">Quantity: Low to High</option>
                        <option value="quantity_high">Quantity: High to Low</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <button id="clearFilters" type="button" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle me-2"></i>Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Grid -->
    @if (Model != null && Model.Any())
    {
            <div class="row" id="machinesGrid">
            @foreach (var machine in Model)
            {
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-4 machine-card"
                             data-price="@machine.Price"
                             data-quantity="@machine.AvailableQuantity"
                             data-date="@machine.CreatedAt.Ticks">

                            <div class="card shadow-sm border-0 h-100">
                                <div class="position-relative">
                            @if (!string.IsNullOrWhiteSpace(machine.ImageUrl))
                            {
                                            <img src="@machine.ImageUrl" class="card-img-top machine-img" alt="@machine.Name">
                            }
                            else
                            {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                                <i class="bi bi-gear fs-1 text-muted"></i>
                                            </div>
                            }

                            @if (!string.IsNullOrWhiteSpace(machine.Status))
                            {
                                            <span class="position-absolute top-0 start-0 m-2 badge @GetStatusBadgeClass(machine.Status)">
                                    @machine.Status
                                            </span>
                            }
                                </div>

                                <div class="card-body">
                                    <h5 class="card-title text-truncate mb-2">@machine.Name</h5>

                                    <div class="row g-2 mb-3">
                                        <div class="col-6">
                                            <div class="text-muted small">Price</div>
                                            <div class="fw-bold text-success">$@machine.Price.ToString("N2")</div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-muted small">Stock</div>
                                            <div class="fw-bold">@machine.AvailableQuantity units</div>
                                        </div>
                                    </div>

                            @if (!string.IsNullOrWhiteSpace(machine.MachineCondition.ToString()) || !string.IsNullOrWhiteSpace(machine.Brand))
                            {
                                            <div class="mb-3">
                                    @if (!string.IsNullOrWhiteSpace(machine.MachineCondition.ToString()))
                                    {
                                                        <span class="badge bg-info me-2">@machine.MachineCondition</span>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(machine.Brand))
                                    {
                                                        <span class="badge bg-secondary">@machine.Brand</span>
                                    }
                                            </div>
                            }

                            @if (machine.WarrantyMonths.HasValue && machine.WarrantyMonths > 0)
                            {
                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-shield-check me-1"></i>
                                                    Warranty: @machine.WarrantyMonths months
                                                </small>
                                            </div>
                            }

                                    <div class="text-muted small">
                                        <i class="bi bi-calendar3 me-1"></i>@machine.CreatedAt.ToString("MMM dd, yyyy")
                                    </div>
                                </div>

                                <div class="card-footer bg-transparent border-top">
                                    <div class="d-flex justify-content-between align-items-center gap-2">
                                        <a asp-action="EditMachine" asp-route-id="@machine.Id"
                                           class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>

                                        <form asp-action="DeleteMachine" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                            <input type="hidden" name="Id" value="@machine.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash me-1"></i>Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
            }
            </div>
    }
    else
    {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-gear fs-1 text-muted opacity-50" style="font-size: 4rem;"></i>
                </div>
                <h3 class="h4 text-muted mb-3">No Machines Found</h3>
                <p class="text-muted mb-4">You haven't added any machines yet.</p>
                <div class="d-flex justify-content-center">
                    <a asp-action="AddMachine" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Add Your First Machine
                    </a>
                </div>
            </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "available" => "bg-success",
            "soldout" or "sold out" => "bg-danger",
            "reserved" => "bg-warning text-dark",
            "inactive" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}

<style nonce="@nonce">
    .card {
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .machine-img {
        height: 200px;
        object-fit: cover;
        width: 100%;
    }
</style>

<script nonce="@nonce">
    document.addEventListener('DOMContentLoaded', function () {

        const searchInput = document.getElementById('searchInput');
        const sortFilter = document.getElementById('sortFilter');
        const clearFilters = document.getElementById('clearFilters');

        function getCards() {
            return Array.from(document.querySelectorAll('.machine-card'));
        }

        function filterAndSort() {
            const term = (searchInput.value || '').toLowerCase();
            const sortBy = sortFilter.value;

            let cards = getCards();

            if (term) {
                cards = cards.filter(c => c.textContent.toLowerCase().includes(term));
            }

            cards.sort((a, b) => {
                const da = parseInt(a.dataset.date || '0');
                const db = parseInt(b.dataset.date || '0');
                const pa = parseFloat(a.dataset.price || '0');
                const pb = parseFloat(b.dataset.price || '0');
                const qa = parseInt(a.dataset.quantity || '0');
                const qb = parseInt(b.dataset.quantity || '0');

                switch (sortBy) {
                    case 'newest': return db - da;
                    case 'oldest': return da - db;
                    case 'price_low': return pa - pb;
                    case 'price_high': return pb - pa;
                    case 'quantity_low': return qa - qb;
                    case 'quantity_high': return qb - qa;
                    default: return 0;
                }
            });

            const grid = document.getElementById('machinesGrid');
            if (!grid) return;

            getCards().forEach(c => c.style.display = 'none');
            cards.forEach(c => { c.style.display = 'block'; grid.appendChild(c); });
        }

        searchInput?.addEventListener('input', filterAndSort);
        sortFilter?.addEventListener('change', filterAndSort);

        clearFilters?.addEventListener('click', function () {
            searchInput.value = '';
            sortFilter.value = 'newest';
            filterAndSort();
            searchInput.focus();
        });

        filterAndSort();
    });
</script>