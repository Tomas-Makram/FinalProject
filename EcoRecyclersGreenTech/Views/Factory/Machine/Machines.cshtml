<script nonce="@nonce">
    document.addEventListener('DOMContentLoaded', function () {

        // Delete modal wiring
        const deleteModal = document.getElementById('deleteModal');
        const deleteMachineName = document.getElementById('deleteMachineName');
        const deleteMachineId = document.getElementById('deleteMachineId');

        deleteModal?.addEventListener('show.bs.modal', function (event) {
            const btn = event.relatedTarget;
            const id = btn.getAttribute('data-id');
            const name = btn.getAttribute('data-name') || 'Machine';
            deleteMachineName.textContent = name;
            deleteMachineId.value = id;
        });

        const searchInput = document.getElementById('searchInput');
        const sortFilter = document.getElementById('sortFilter');
        const clearFilters = document.getElementById('clearFilters');

        function getCards() {
            return Array.from(document.querySelectorAll('.machine-card'));
        }

        function filterAndSortMachines() {
            const term = (searchInput.value || '').toLowerCase();
            const sortBy = sortFilter.value;

            let cards = getCards();

            if (term) {
                cards = cards.filter(c => c.textContent.toLowerCase().includes(term));
            }

            cards.sort((a, b) => {
                const da = parseInt(a.dataset.date || '0');
                const db = parseInt(b.dataset.date || '0');
                const pa = parseFloat(a.dataset.price || '0');
                const pb = parseFloat(b.dataset.price || '0');
                const qa = parseInt(a.dataset.quantity || '0');
                const qb = parseInt(b.dataset.quantity || '0');

                const oa = parseInt(a.dataset.orders || '0');
                const ob = parseInt(b.dataset.orders || '0');
                const aa = parseInt(a.dataset.activeorders || '0');
                const ab = parseInt(b.dataset.activeorders || '0');

                switch (sortBy) {
                    case 'newest': return db - da;
                    case 'oldest': return da - db;
                    case 'price_low': return pa - pb;
                    case 'price_high': return pb - pa;
                    case 'quantity_low': return qa - qb;
                    case 'quantity_high': return qb - qa;
                    case 'orders_high': return ob - oa;
                    case 'active_orders_high': return ab - aa;
                    default: return 0;
                }
            });

            const grid = document.getElementById('machinesGrid');
            if (!grid) return;

            getCards().forEach(c => c.style.display = 'none');
            cards.forEach(c => { c.style.display = 'block'; grid.appendChild(c); });
        }

        searchInput?.addEventListener('input', filterAndSortMachines);
        sortFilter?.addEventListener('change', filterAndSortMachines);

        clearFilters?.addEventListener('click', function () {
            searchInput.value = '';
            sortFilter.value = 'newest';
            filterAndSortMachines();
            searchInput.focus();
        });

        filterAndSortMachines();
    });
</script>