@model EcoRecyclersGreenTech.Models.Auth.LoginModel
@{
    var nonce = Context.Items["CSPNonce"]?.ToString();
    ViewData["Title"] = "Login";
}

<div class="auth-premium">
    <div class="container">
        <div class="auth-shell">
            <div class="row g-0 align-items-stretch">

                <!-- ================= LEFT: Illustration / Pitch ================= -->
                <div class="col-lg-6 d-none d-lg-flex">
                    <div class="auth-hero w-100">
                        <div class="hero-top">
                            <div class="hero-badge">
                                <i class="bi bi-recycle me-2"></i>
                                EcoRecyclers GreenTech
                            </div>
                        </div>

                        <div class="hero-mid">
                            <h1 class="hero-title">Welcome back</h1>
                            <p class="hero-sub">
                                Join the greener supply chain — connect factories, craftsmen, and traders in one platform.
                            </p>

                            <ul class="hero-list">
                                <li><span class="dot"></span> No middlemen</li>
                                <li><span class="dot"></span> Track orders</li>
                                <li><span class="dot"></span> Secure & continuous support</li>
                            </ul>
                        </div>

                        <!-- ✅ OPTION A: CSS Illustration (default) -->
                        <div class="hero-illus">
                            <div class="illus-card">
                                <div class="illus-row">
                                    <span class="illus-pill"></span>
                                    <span class="illus-pill"></span>
                                    <span class="illus-pill"></span>
                                </div>
                                <div class="illus-grid">
                                    <div class="b b1"></div>
                                    <div class="b b2"></div>
                                    <div class="b b3"></div>
                                    <div class="b b4"></div>
                                </div>
                                <div class="illus-wave"></div>
                            </div>

                            <div class="wind w1"></div>
                            <div class="wind w2"></div>
                            <div class="wind w3"></div>
                        </div>

                        <!-- ✅ OPTION B (If you want to use an image instead):
                             1) Put image at: wwwroot/images/auth/hero.png
                             2) Replace the whole <div class="hero-illus"> ... </div> above with:
                                <div class="hero-illus hero-img"></div>
                         -->

                        <div class="hero-bottom">
                            <small class="text-white-50">Cleaner future starts with smarter recycling.</small>
                        </div>
                    </div>
                </div>

                <!-- ================= RIGHT: Login Card ================= -->
                <div class="col-lg-6">
                    <div class="auth-form-wrap">
                        <div class="auth-card">
                            <div class="auth-head">
                                <div class="auth-logo">
                                    <i class="bi bi-shield-check"></i>
                                </div>
                                <h3 class="mb-1">Login</h3>
                                <p class="mb-0 text-muted small">Access your account securely</p>
                            </div>

                            <div class="auth-body">
                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }

                                <form method="post" enctype="multipart/form-data" asp-controller="Auth" asp-action="Login" id="loginForm" class="needs-validation" novalidate>
                                    <div class="mb-3">
                                        <div class="form-floating">
                                            <input asp-for="username" class="form-control" placeholder="Username or Email" required />
                                            <label asp-for="username"><i class="fas fa-user me-2"></i>Username or Email</label>
                                            <span asp-validation-for="username" class="text-danger small mt-1"></span>
                                        </div>
                                    </div>

                                    <div class="mb-2">
                                        <div class="form-floating position-relative">
                                            <input asp-for="password" type="password" class="form-control" id="password" placeholder="Password" required />
                                            <label asp-for="password"><i class="fas fa-lock me-2"></i>Password</label>
                                            <button type="button" class="btn btn-outline-secondary btn-sm position-absolute top-50 end-0 translate-middle-y me-2" id="togglePassword">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <span asp-validation-for="password" class="text-danger small mt-1"></span>
                                        </div>
                                    </div>

                                    <div class="mb-3 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="rememberMe">
                                            <label class="form-check-label small" for="rememberMe">Remember me</label>
                                        </div>
                                        <a asp-controller="Auth" asp-action="ForgetPassword" class="auth-link small">
                                            <i class="fas fa-key me-1"></i>Forgot Password?
                                        </a>
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100 py-2 auth-btn">
                                        <i class="fas fa-sign-in-alt me-2"></i>Login
                                    </button>

                                    <div class="text-center mt-3">
                                        <p class="mb-0 text-muted small">
                                            Don't have an account?
                                            <a asp-controller="Auth" asp-action="Signup" class="auth-link fw-semibold ms-1">Create one</a>
                                        </p>
                                    </div>
                                </form>
                            </div>

                            <div class="auth-foot">
                                <small class="text-muted">© @DateTime.Now.Year EcoRecyclers GreenTech</small>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- row -->
        </div> <!-- shell -->
    </div> <!-- container -->
</div>

@section Scripts {
    <script nonce="@nonce">
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('loginForm');
            const togglePasswordBtn = document.getElementById('togglePassword');
            const passwordField = document.getElementById('password');

            // Toggle password visibility
            togglePasswordBtn.addEventListener('click', function () {
                const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordField.setAttribute('type', type);
                this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
            });

            // Form validation
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Focus on username field
            const usernameField = document.querySelector('input[name="username"]');
            if (usernameField) {
                setTimeout(() => usernameField.focus(), 250);
            }
        });
    </script>

    <style>
        /* ===================== PREMIUM AUTH (DESIGN ONLY) ===================== */
        :root {
            --eco-green: #16a34a;
            --eco-green2: #22c55e;
            --eco-teal: #14b8a6;
            --eco-sky: #38bdf8;
            --ink: #0f172a;
            --muted: #64748b;
            --glass: rgba(255,255,255,.72);
            --border: rgba(2,132,199,.18);
            --shadow: 0 22px 60px rgba(2,6,23,.12);
            --radius: 22px;
        }

        /* Background like mockups (Light) */
        body {
            background: radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.22), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.22), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.18), transparent 55%), linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        }

        /* Centering between navbar/footer */
        .auth-premium {
            min-height: calc(100vh - 140px);
            display: flex;
            align-items: center;
            padding: 10px 0 25px;
        }

        .auth-shell {
            width: 100%;
            max-width: 1080px;
            margin: 0 auto;
            border-radius: var(--radius);
            border: 1px solid var(--border);
            background: rgba(255,255,255,.55);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        /* Left hero */
        .auth-hero {
            position: relative;
            padding: 26px 26px 20px;
            color: #fff;
            background: radial-gradient(600px 350px at 20% 25%, rgba(255,255,255,.18), transparent 60%), radial-gradient(700px 450px at 80% 20%, rgba(255,255,255,.12), transparent 55%), linear-gradient(135deg, rgba(34,197,94,.95), rgba(20,184,166,.92));
            min-height: 520px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            padding: 8px 12px;
            border-radius: 999px;
            background: rgba(255,255,255,.16);
            border: 1px solid rgba(255,255,255,.22);
            font-weight: 700;
            letter-spacing: .2px;
            width: fit-content;
        }

        .hero-title {
            font-size: 2.05rem;
            font-weight: 900;
            margin: 6px 0 8px;
            letter-spacing: .2px;
        }

        .hero-sub {
            margin: 0;
            max-width: 420px;
            color: rgba(255,255,255,.88);
            line-height: 1.5;
        }

        .hero-list {
            list-style: none;
            padding: 14px 0 0;
            margin: 0;
            display: grid;
            gap: 10px;
        }

            .hero-list li {
                display: flex;
                align-items: center;
                gap: 10px;
                font-weight: 700;
                color: rgba(255,255,255,.92);
            }

            .hero-list .dot {
                width: 12px;
                height: 12px;
                border-radius: 999px;
                background: rgba(255,255,255,.95);
                box-shadow: 0 8px 20px rgba(255,255,255,.18);
            }

        /* Decorative illustration (no images) */
        .hero-illus {
            position: relative;
            margin-top: 14px;
            height: 220px;
        }

        .illus-card {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            margin: auto;
            width: 92%;
            height: 200px;
            border-radius: 20px;
            background: rgba(255,255,255,.18);
            border: 1px solid rgba(255,255,255,.22);
            overflow: hidden;
            backdrop-filter: blur(6px);
        }

        .illus-row {
            display: flex;
            gap: 8px;
            padding: 14px;
        }

        .illus-pill {
            width: 48px;
            height: 10px;
            border-radius: 999px;
            background: rgba(255,255,255,.35);
        }

        .illus-grid {
            padding: 0 14px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }

            .illus-grid .b {
                height: 44px;
                border-radius: 14px;
                background: rgba(255,255,255,.22);
                border: 1px solid rgba(255,255,255,.18);
            }

            .illus-grid .b1 {
                background: rgba(255,255,255,.25);
            }

            .illus-grid .b2 {
                background: rgba(255,255,255,.18);
            }

            .illus-grid .b3 {
                background: rgba(255,255,255,.20);
            }

            .illus-grid .b4 {
                background: rgba(255,255,255,.16);
            }

        .illus-wave {
            position: absolute;
            left: -10%;
            right: -10%;
            bottom: -35%;
            height: 140px;
            background: radial-gradient(120px 60px at 20% 30%, rgba(255,255,255,.28), transparent 60%), radial-gradient(150px 70px at 60% 30%, rgba(255,255,255,.24), transparent 60%), radial-gradient(140px 60px at 85% 35%, rgba(255,255,255,.22), transparent 60%);
            filter: blur(1px);
            opacity: .9;
        }

        .wind {
            position: absolute;
            width: 120px;
            height: 26px;
            border-radius: 999px;
            background: rgba(255,255,255,.12);
            border: 1px solid rgba(255,255,255,.16);
            filter: blur(.2px);
        }

        .w1 {
            right: 18px;
            top: 18px;
            transform: rotate(-8deg);
        }

        .w2 {
            right: 38px;
            top: 58px;
            width: 150px;
            transform: rotate(-6deg);
            opacity: .85;
        }

        .w3 {
            right: 26px;
            top: 104px;
            width: 100px;
            transform: rotate(-10deg);
            opacity: .75;
        }

        /* ✅ If you want hero image instead of CSS illustration */
        .hero-img {
            height: 240px;
            width: 100%;
            border-radius: 20px;
            background: url('/images/auth/hero.png') center / contain no-repeat;
            margin-top: 14px;
            filter: drop-shadow(0 18px 35px rgba(0,0,0,.15));
        }

        /* Right form area */
        .auth-form-wrap {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 26px 18px;
            background: rgba(255,255,255,.35);
        }

        .auth-card {
            width: 100%;
            max-width: 420px;
            border-radius: 20px;
            border: 1px solid rgba(15,23,42,.08);
            background: var(--glass);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 18px 45px rgba(2,6,23,.10);
            overflow: hidden;
        }

        .auth-head {
            padding: 22px 22px 14px;
            text-align: center;
        }

        .auth-logo {
            width: 54px;
            height: 54px;
            border-radius: 16px;
            margin: 0 auto 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            background: linear-gradient(135deg, var(--eco-green), var(--eco-teal));
            box-shadow: 0 12px 25px rgba(20,184,166,.18);
            font-size: 1.4rem;
        }

        .auth-body {
            padding: 0 22px 18px;
        }

        .auth-foot {
            padding: 14px 22px;
            text-align: center;
            background: rgba(255,255,255,.55);
            border-top: 1px solid rgba(15,23,42,.08);
        }

        /* Inputs */
        .form-control {
            border-radius: 14px !important;
            border: 1px solid rgba(15,23,42,.10) !important;
            background: rgba(255,255,255,.88) !important;
            box-shadow: none !important;
            transition: all .22s ease;
        }

            .form-control:focus {
                border-color: rgba(34,197,94,.55) !important;
                box-shadow: 0 0 0 .2rem rgba(34,197,94,.18) !important;
                background: rgba(255,255,255,.96) !important;
            }

        .form-floating > label {
            color: var(--muted);
        }

        /* Password eye */
        .form-floating.position-relative input {
            padding-right: 52px;
        }

        .btn-outline-secondary {
            border: 1px solid rgba(15,23,42,.12) !important;
            background: rgba(255,255,255,.65) !important;
            width: 36px;
            height: 36px;
            border-radius: 12px !important;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 3;
            transition: all .2s ease;
        }

            .btn-outline-secondary:hover {
                background: rgba(255,255,255,.92) !important;
                transform: translateY(-1px);
            }

        /* Button */
        .auth-btn {
            border: 0 !important;
            border-radius: 999px !important;
            background: linear-gradient(90deg, var(--eco-green), var(--eco-teal)) !important;
            font-weight: 800;
            letter-spacing: .2px;
            box-shadow: 0 12px 26px rgba(22,163,74,.22);
            transition: transform .22s ease, box-shadow .22s ease, filter .22s ease;
        }

            .auth-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 16px 34px rgba(20,184,166,.22);
                filter: brightness(1.02);
            }

        .auth-link {
            color: var(--eco-teal) !important;
            text-decoration: none !important;
        }

            .auth-link:hover {
                color: #0ea5a6 !important;
                text-decoration: underline !important;
            }

        .form-check-input:checked {
            background-color: var(--eco-green) !important;
            border-color: var(--eco-green) !important;
        }

        /* ===================== DARK MODE TUNING ===================== */
        [data-bs-theme="dark"] .auth-shell {
            background: rgba(15, 23, 42, .55);
            border-color: rgba(148, 163, 184, .18);
            box-shadow: 0 22px 60px rgba(0,0,0,.45);
        }

        [data-bs-theme="dark"] .auth-form-wrap {
            background: rgba(2, 6, 23, .35);
        }

        [data-bs-theme="dark"] .auth-card {
            background: rgba(15, 23, 42, .70);
            border-color: rgba(148, 163, 184, .16);
            box-shadow: 0 18px 45px rgba(0,0,0,.35);
        }

        [data-bs-theme="dark"] .auth-head h3 {
            color: #e2e8f0;
        }

        [data-bs-theme="dark"] .auth-body .text-muted,
        [data-bs-theme="dark"] .auth-foot .text-muted {
            color: rgba(226, 232, 240, .75) !important;
        }

        [data-bs-theme="dark"] .form-control {
            background: rgba(2, 6, 23, .55) !important;
            border-color: rgba(148, 163, 184, .18) !important;
            color: #e2e8f0 !important;
        }

        [data-bs-theme="dark"] .form-floating > label {
            color: rgba(226, 232, 240, .65) !important;
        }

        [data-bs-theme="dark"] .form-control:focus {
            background: rgba(2, 6, 23, .70) !important;
            border-color: rgba(34,197,94,.45) !important;
            box-shadow: 0 0 0 .2rem rgba(34,197,94,.16) !important;
        }

        [data-bs-theme="dark"] .btn-outline-secondary {
            background: rgba(2, 6, 23, .40) !important;
            border-color: rgba(148, 163, 184, .20) !important;
            color: rgba(226, 232, 240, .85) !important;
        }

            [data-bs-theme="dark"] .btn-outline-secondary:hover {
                background: rgba(2, 6, 23, .60) !important;
            }

        [data-bs-theme="dark"] .auth-hero {
            background: radial-gradient(600px 350px at 20% 25%, rgba(255,255,255,.10), transparent 60%), radial-gradient(700px 450px at 80% 20%, rgba(255,255,255,.07), transparent 55%), linear-gradient(135deg, rgba(22,163,74,.85), rgba(20,184,166,.78));
        }

        [data-bs-theme="dark"] .illus-card {
            background: rgba(255,255,255,.10);
            border-color: rgba(255,255,255,.14);
        }

        [data-bs-theme="dark"] .illus-pill,
        [data-bs-theme="dark"] .illus-grid .b,
        [data-bs-theme="dark"] .wind {
            background: rgba(255,255,255,.10);
            border-color: rgba(255,255,255,.12);
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .auth-premium {
                min-height: calc(100vh - 120px);
                padding: 10px 0 20px;
            }

            .auth-form-wrap {
                padding: 18px 12px;
            }
        }
    </style>
}