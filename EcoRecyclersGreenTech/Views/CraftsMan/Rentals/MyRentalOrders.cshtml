@model IEnumerable<EcoRecyclersGreenTech.Models.FactoryStore.Orders.RentalOrderDetailsModel>

@{
    ViewData["Title"] = ViewBag.Title as string ?? "My Rental Orders";
    var nonce = Context.Items["CSPNonce"] as string ?? string.Empty;

    string Badge(string status)
    {
        var s = (status ?? "").Trim().ToLowerInvariant();
        return s switch
        {
            "pending" => "bg-warning text-dark",
            "confirmed" => "bg-info text-dark",
            "processing" => "bg-primary",
            "readyforpickup" => "bg-primary",
            "pickedup" => "bg-success",
            "shipped" => "bg-primary",
            "delivered" => "bg-success",
            "completed" => "bg-success",
            "cancelled" => "bg-danger",
            "refunded" => "bg-secondary",
            "returned" => "bg-secondary",
            "paymentreceived" => "bg-success",
            "disputed" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    // ✅ Delete button rule (same as your original)
    bool CanDelete(string status)
    {
        var s = (status ?? "").Trim().ToLowerInvariant();
        return s == "cancelled" || s == "refunded" || s == "returned"
            || s == "completed" || s == "delivered" || s == "pickedup";
    }

    // ✅ Images ONLY from VM
    List<string> GetImages(EcoRecyclersGreenTech.Models.FactoryStore.Orders.RentalOrderDetailsModel o)
    {
        var imgs = new List<string>();

        void Add(string? x)
        {
            if (!string.IsNullOrWhiteSpace(x))
            {
                var t = x.Trim();
                if (!imgs.Contains(t)) imgs.Add(t);
            }
        }

        if (o.ImageUrls != null && o.ImageUrls.Any())
        {
            foreach (var u in o.ImageUrls) Add(u);
        }

        return imgs;
    }

    string SafeAddr(string? x) => string.IsNullOrWhiteSpace(x) ? "—" : x.Trim();

    int SafeMonths(int m) => (m <= 0 ? 3 : m);

    decimal TotalForMonths(decimal pricePerMonth, int months)
    {
        if (pricePerMonth < 0) pricePerMonth = 0;
        if (months <= 0) months = 3;
        return pricePerMonth * months;
    }
}

<div class="dashboard-premium">
    <div class="container">
        <div class="dashboard-shell">
            <div class="dashboard-content-wrap-full">
                <div class="dashboard-card-full">

                    <!-- Header -->
                    <div class="auth-head">
                        <div class="auth-logo">
                            <i class="bi bi-building"></i>
                        </div>
                        <h3 class="mb-1">@ViewData["Title"]</h3>
                        <p class="mb-0 text-muted small">Rental requests you sent</p>
                    </div>

                    <div class="auth-body">
                        <!-- Breadcrumb -->
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="CraftsMan">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>

                        <!-- Alerts -->
                        @if (TempData["Success"] != null)
                        {
                            <div class="premium-card alert alert-success mb-4">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="premium-card alert alert-danger mb-4">
                                @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Content -->
                        <div class="premium-card">
                            @if (Model != null && Model.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle orders-table">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="text-label">#</th>
                                                <th class="text-label" style="width:140px;">Photos</th>
                                                <th class="text-label">Address</th>
                                                <th class="text-label">Price / month</th>
                                                <th class="text-label">Months</th>
                                                <th class="text-label">Total</th>
                                                <th class="text-label">Available</th>
                                                <th class="text-label">Status</th>
                                                <th class="text-label">Date</th>
                                                <th class="text-end text-label" style="width:240px;">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var o in Model)
                                            {
                                                var st = (o.Status ?? "");
                                                var imgs = GetImages(o);
                                                var cid = $"orderImgs_{o.RentalOrderId}";

                                                var address = SafeAddr(o.RentalAddress);
                                                var pricePerMonth = (o.PricePerMonth > 0 ? o.PricePerMonth : 0m);

                                                var months = SafeMonths(o.Months);
                                                var total = TotalForMonths(pricePerMonth, months);

                                                var availFrom = o.AvailableFrom.HasValue ? o.AvailableFrom.Value.ToString("yyyy-MM-dd") : "—";
                                                var availUntil = o.AvailableUntil.HasValue ? o.AvailableUntil.Value.ToString("yyyy-MM-dd") : "—";
                                                var availText = (availFrom == "—" && availUntil == "—") ? "—" : $"{availFrom} → {availUntil}";

                                                <tr>
                                                    <td>
                                                        <span class="badge bg-light text-dark">
                                                            REN-@o.RentalOrderId.ToString("000000")
                                                        </span>
                                                    </td>

                                                    <!-- Photos -->
                                                    <td>
                                                        @if (imgs.Count == 0)
                                                        {
                                                            <div class="img-placeholder" title="No images">
                                                                <i class="bi bi-image"></i>
                                                            </div>
                                                        }
                                                        else if (imgs.Count == 1)
                                                        {
                                                            <a href="@imgs[0]" target="_blank" class="img-one-wrap" title="Open image">
                                                                <img class="img-one" src="@imgs[0]" alt="rental" loading="lazy" />
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <div id="@cid" class="carousel slide mini-carousel" data-bs-ride="carousel" data-bs-interval="3500">
                                                                <div class="carousel-inner">
                                                                    @for (int i = 0; i < imgs.Count; i++)
                                                                    {
                                                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                                                            <a href="@imgs[i]" target="_blank" title="Open image">
                                                                                <img src="@imgs[i]" class="d-block w-100 mini-img" alt="rental" loading="lazy" />
                                                                            </a>
                                                                        </div>
                                                                    }
                                                                </div>

                                                                <button class="carousel-control-prev mini-control" type="button" data-bs-target="#@cid" data-bs-slide="prev">
                                                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                                    <span class="visually-hidden">Previous</span>
                                                                </button>
                                                                <button class="carousel-control-next mini-control" type="button" data-bs-target="#@cid" data-bs-slide="next">
                                                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                                    <span class="visually-hidden">Next</span>
                                                                </button>

                                                                <div class="mini-dots">
                                                                    @for (int i = 0; i < imgs.Count; i++)
                                                                    {
                                                                        <button type="button"
                                                                                data-bs-target="#@cid"
                                                                                data-bs-slide-to="@i"
                                                                                class="@(i == 0 ? "active" : "")"
                                                                                aria-current="@(i == 0 ? "true" : "false")"
                                                                                aria-label="Slide @(i + 1)"></button>
                                                                    }
                                                                </div>
                                                            </div>
                                                        }
                                                    </td>

                                                    <td class="text-label">@address</td>

                                                    <td class="fw-bold text-label">@pricePerMonth.ToString("N2")</td>

                                                    <td>
                                                        <span class="badge bg-light text-dark border">
                                                            @months
                                                        </span>
                                                    </td>

                                                    <td class="fw-bold text-danger text-label">@total.ToString("N2")</td>

                                                    <td class="text-muted text-label">
                                                        @availText
                                                    </td>

                                                    <td><span class="badge @Badge(st)">@st</span></td>

                                                    <td class="text-muted text-label">@o.OrderDate.ToString("yyyy-MM-dd")</td>

                                                    <td class="text-end">
                                                        <a asp-controller="CraftsMan"
                                                           asp-action="RentalOrderDetails"
                                                           asp-route-id="@o.RentalOrderId"
                                                           class="btn btn-sm btn-outline-warning">
                                                            View
                                                        </a>

                                                        @if (CanDelete(st))
                                                        {
                                                            <form asp-action="CancelRentalOrder" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="orderId" value="@o.RentalOrderId" />
                                                                <button class="btn btn-sm btn-outline-danger"
                                                                        onclick="return confirm('Remove this order from your list? (It will be deleted permanently only if owner also removes it)');">
                                                                    Delete
                                                                </button>
                                                            </form>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <small class="text-muted d-block mt-3 text-label">
                                    ملاحظة: عرض "Months" و "Total" يعتمد على RentalOrderRowVM.Months (افتراضي 3) و PricePerMonth.
                                </small>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <div class="mb-4">
                                        <i class="bi bi-inbox fs-1 text-muted opacity-50" style="font-size: 4rem;"></i>
                                    </div>
                                    <h5 class="h6 text-muted mb-2 text-label">No rental requests yet</h5>
                                    <p class="text-muted small text-label">You haven't sent any rental requests yet</p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="auth-foot">
                        <small class="text-muted">© @DateTime.Now.Year EcoRecyclers GreenTech • @ViewData["Title"]</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style nonce="@nonce">
    /* ===================== PREMIUM RENTAL ORDERS STYLES ===================== */
    :root {
