    }

    /* Table */
    .table {
        --bs-table-bg: transparent;
        --bs-table-striped-bg: rgba(0,0,0,.02);
        --bs-table-hover-bg: rgba(0,0,0,.04);
        border-color: rgba(15,23,42,.08);
    }

