        height: 72px;
        border-radius: 12px;
        border: 1px dashed #dee2e6;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 22px;
        transition: all 0.2s ease;
    }

    .img-one-wrap {
        display: inline-block;
        width: 120px;
        height: 72px;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid rgba(15,23,42,.08);
        background: #f8f9fa;
        box-shadow: 0 6px 16px rgba(0,0,0,0.06);
        transition: all 0.2s ease;
    }

        .img-one-wrap:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.10);
        }

    .img-one {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform .25s ease;
    }

    .img-one-wrap:hover .img-one {
        transform: scale(1.04);
    }

    .mini-carousel {
        width: 120px;
        height: 72px;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid rgba(15,23,42,.08);
        background: #f8f9fa;
        box-shadow: 0 6px 16px rgba(0,0,0,0.06);
        position: relative;
        transition: all 0.2s ease;
    }

        .mini-carousel:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.10);
        }

    .mini-img {
        width: 120px;
        height: 72px;
        object-fit: cover;
        display: block;
    }

    .mini-control {
        width: 28px;
        opacity: .9;
        transition: opacity 0.2s ease;
    }

    .mini-carousel:hover .mini-control {
        opacity: 1;
    }

    .mini-control .carousel-control-prev-icon,
    .mini-control .carousel-control-next-icon {
        filter: drop-shadow(0 2px 6px rgba(0,0,0,.35));
    }

    .mini-dots {
        position: absolute;
        left: 8px;
        right: 8px;
        bottom: 6px;
