@model IEnumerable<EcoRecyclersGreenTech.Data.Orders.MaterialOrder>

@{
    ViewData["Title"] = ViewBag.Title as string ?? "My Material Orders";
    var nonce = Context.Items["CSPNonce"] as string ?? string.Empty;

    string Badge(string status)
    {
        var s = (status ?? "").Trim().ToLowerInvariant();
        return s switch
        {
            "pending" => "bg-warning text-dark",
            "confirmed" => "bg-info text-dark",
            "processing" => "bg-primary",
            "readyforpickup" => "bg-primary",
            "pickedup" => "bg-success",
            "shipped" => "bg-primary",
            "delivered" => "bg-success",
            "completed" => "bg-success",
            "cancelled" => "bg-danger",
            "refunded" => "bg-secondary",
            "returned" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    bool CanDelete(string status)
    {
        var s = (status ?? "").Trim().ToLowerInvariant();
        return s == "cancelled" || s == "refunded" || s == "returned"
            || s == "completed" || s == "delivered" || s == "pickedup";
    }

    List<string> GetImages(EcoRecyclersGreenTech.Data.Orders.MaterialOrder o)
    {
        var imgs = new List<string>();
        void Add(string? x)
        {
            if (!string.IsNullOrWhiteSpace(x))
            {
                var t = x.Trim();
                if (!imgs.Contains(t)) imgs.Add(t);
            }
        }

        Add(o.MaterialStore?.ProductImgURL1);
        Add(o.MaterialStore?.ProductImgURL2);
        Add(o.MaterialStore?.ProductImgURL3);

        return imgs;
    }

    string Money(decimal v) => v.ToString("N2");
}

<div class="dashboard-premium">
    <div class="container">
        <div class="dashboard-shell">
            <div class="dashboard-content-wrap-full">
                <div class="dashboard-card-full">

                    <!-- Header -->
                    <div class="auth-head">
                        <div class="auth-logo">
                            <i class="bi bi-box-seam"></i>
                        </div>
                        <h3 class="mb-1 text-section-title">@ViewData["Title"]</h3>
                        <p class="mb-0 text-muted small text-label">Material orders & reservations you made</p>
                    </div>

                    <div class="auth-body">
                        <!-- Breadcrumb -->
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="CraftsMan">Dashboard</a></li>
                                <li class="breadcrumb-item active text-label" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>

                        <!-- Alerts -->
                        @if (TempData["Success"] != null)
                        {
                            <div class="premium-card alert alert-success mb-4">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="premium-card alert alert-danger mb-4">
                                @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Content -->
                        <div class="premium-card">
                            @if (Model != null && Model.Any())
                            {
                                <div class="row g-3">
                                    @foreach (var o in Model.OrderByDescending(x => x.OrderDate))
                                    {
                                        var st = o.Status.ToString();
                                        var imgs = GetImages(o);
                                        var cid = $"orderImgs_{o.MaterialOrderID}";
                                        var total = (o.TotalPrice > 0 ? o.TotalPrice : (o.UnitPrice * o.Quantity));
                                        var paid = o.DepositPaid;
                                        var remaining = total - paid;
                                        if (remaining < 0) remaining = 0;

                                        var sellerName = o.MaterialStore?.Seller?.FullName ?? "-";
                                        var materialName = o.MaterialStore?.ProductType ?? "Material";

                                        <div class="col-12">
                                            <div class="material-order-card">
                                                <div class="p-3 p-md-4">

                                                    <!-- Top Row -->
                                                    <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
                                                        <div class="d-flex align-items-start gap-3">
                                                            <div class="order-id">
                                                                <div class="badge bg-light text-dark border">
                                                                    MAT-@o.MaterialOrderID.ToString("000000")
                                                                </div>
                                                                <div class="text-muted small mt-1 text-label">@o.OrderDate.ToString("yyyy-MM-dd")</div>
                                                            </div>

                                                            <div>
                                                                <div class="fw-bold d-flex flex-wrap gap-2 align-items-center">
                                                                    <span class="me-1 text-label">@materialName</span>
                                                                    <span class="badge @Badge(st)">@st</span>
                                                                </div>

                                                                <div class="text-muted small mt-1 text-label">
                                                                    <i class="bi bi-person me-1"></i>Seller: <span class="fw-semibold">@sellerName</span>
                                                                </div>

                                                                @if (!string.IsNullOrWhiteSpace(o.PickupLocation))
                                                                {
                                                                    <div class="text-muted small mt-1 text-label">
                                                                        <i class="bi bi-geo-alt me-1"></i>
                                                                        <span class="v-wrap">@o.PickupLocation</span>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>

                                                        <div class="text-end ms-auto">
                                                            <div class="d-flex gap-2 justify-content-end flex-wrap">
                                                                <a asp-controller="CraftsMan"
                                                                   asp-action="MaterialOrderDetails"
                                                                   asp-route-id="@o.MaterialOrderID"
                                                                   class="btn btn-sm btn-outline-warning">
                                                                    <i class="bi bi-eye me-1"></i>View
                                                                </a>

                                                                @if (CanDelete(st))
                                                                {
                                                                    <form asp-action="DeleteMaterialOrder" method="post" class="d-inline">
                                                                        @Html.AntiForgeryToken()
                                                                        <input type="hidden" name="orderId" value="@o.MaterialOrderID" />
                                                                        <button class="btn btn-sm btn-outline-danger"
                                                                                onclick="return confirm('Remove this order from your list?');">
                                                                            <i class="bi bi-trash me-1"></i>Delete
                                                                        </button>
                                                                    </form>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <hr class="my-3" />

                                                    <div class="row g-3 align-items-start">

                                                        <!-- Photos -->
                                                        <div class="col-12 col-md-3">
                                                            <div class="photos-box">
                                                                @if (imgs.Count == 0)
                                                                {
                                                                    <div class="img-placeholder">
                                                                        <i class="bi bi-image"></i>
                                                                    </div>
                                                                }
                                                                else if (imgs.Count == 1)
                                                                {
                                                                    <a href="@imgs[0]" target="_blank" class="img-one-wrap" title="Open image">
                                                                        <img class="img-one" src="@imgs[0]" alt="material" loading="lazy" />
                                                                    </a>
                                                                }
                                                                else
                                                                {
                                                                    <div id="@cid" class="carousel slide mini-carousel" data-bs-ride="carousel" data-bs-interval="3500">
                                                                        <div class="carousel-inner">
                                                                            @for (int i = 0; i < imgs.Count; i++)
                                                                            {
                                                                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                                                                    <a href="@imgs[i]" target="_blank" title="Open image">
                                                                                        <img src="@imgs[i]" class="d-block w-100 mini-img" alt="material" loading="lazy" />
                                                                                    </a>
                                                                                </div>
                                                                            }
                                                                        </div>

                                                                        <button class="carousel-control-prev mini-control" type="button" data-bs-target="#@cid" data-bs-slide="prev">
                                                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                                            <span class="visually-hidden">Previous</span>
                                                                        </button>
                                                                        <button class="carousel-control-next mini-control" type="button" data-bs-target="#@cid" data-bs-slide="next">
                                                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                                            <span class="visually-hidden">Next</span>
                                                                        </button>

                                                                        <div class="mini-dots">
                                                                            @for (int i = 0; i < imgs.Count; i++)
                                                                            {
                                                                                <button type="button"
                                                                                        data-bs-target="#@cid"
                                                                                        data-bs-slide-to="@i"
                                                                                        class="@(i == 0 ? "active" : "")"
                                                                                        aria-current="@(i == 0 ? "true" : "false")"
                                                                                        aria-label="Slide @(i+1)"></button>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>

                                                        <!-- Key Info -->
                                                        <div class="col-12 col-md-9">
                                                            <div class="kv-grid">

                                                                <div class="box soft">
                                                                    <div class="box-title text-label"><i class="bi bi-boxes me-1"></i>Order Summary</div>
                                                                    <div class="kv mt-2">
                                                                        <div class="k text-label">Qty</div>
                                                                        <div class="v text-label">@o.Quantity</div>

                                                                        <div class="k text-label">Unit</div>
                                                                        <div class="v text-label">@Money(o.UnitPrice)</div>

                                                                        <div class="k text-label">Total</div>
                                                                        <div class="v text-label">@Money(total)</div>
                                                                    </div>
                                                                </div>

                                                                <div class="box soft">
                                                                    <div class="box-title text-label"><i class="bi bi-shield-check me-1"></i>Reservation</div>
                                                                    <div class="kv mt-2">
                                                                        <div class="k text-label">Paid Now</div>
                                                                        <div class="v text-success text-label">@Money(paid)</div>

                                                                        <div class="k text-label">Remaining</div>
                                                                        <div class="v text-danger text-label">@Money(remaining)</div>

                                                                        <div class="k text-label">Cancel Until</div>
                                                                        <div class="v text-label">@o.CancelUntil.ToString("yyyy-MM-dd")</div>
                                                                    </div>
                                                                </div>

                                                                <div class="box soft">
                                                                    <div class="box-title text-label"><i class="bi bi-truck me-1"></i>Delivery</div>
                                                                    <div class="kv mt-2">
                                                                        <div class="k text-label">Expected</div>
                                                                        <div class="v text-label">@o.ExpectedArrivalDate.ToString("yyyy-MM-dd")</div>

                                                                        <div class="k text-label">Pickup</div>
                                                                        <div class="v v-wrap text-label">@(!string.IsNullOrWhiteSpace(o.PickupLocation) ? o.PickupLocation : "-")</div>

                                                                        <div class="k text-label">Status</div>
                                                                        <div class="v"><span class="badge @Badge(st)">@st</span></div>
                                                                    </div>
                                                                </div>

                                                            </div>

                                                            <div class="text-muted small mt-2 text-label">
                                                                <i class="bi bi-info-circle me-1"></i>
                                                                Paid Now is your reservation amount. Remaining must be paid before pickup/delivery (depending on seller policy).
                                                            </div>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <div class="mb-4">
                                        <i class="bi bi-inbox fs-1 text-muted opacity-50" style="font-size: 4rem;"></i>
                                    </div>
                                    <h5 class="h6 text-muted mb-2 text-label">No material orders yet</h5>
                                    <p class="text-muted small text-label">You haven't placed any material orders yet</p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="auth-foot">
                        <small class="text-muted text-label">© @DateTime.Now.Year EcoRecyclers GreenTech • @ViewData["Title"]</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style nonce="@nonce">
    /* ===================== PREMIUM MATERIAL ORDERS STYLES ===================== */
    :root {
        --eco-green: #16a34a;
        --eco-teal: #14b8a6;
        --eco-sky: #38bdf8;
        --ink: #0f172a;
        --muted: #64748b;
        --glass: rgba(255,255,255,.72);
        --border: rgba(2,132,199,.18);
        --shadow: 0 22px 60px rgba(2,6,23,.12);
        --radius: 22px;
    }

    /* Animated background */
    body {
        background: radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.22), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.22), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.18), transparent 55%), linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        min-height: 100vh;
        animation: gradientShift 20s ease infinite alternate;
    }

    @@keyframes gradientShift {
        0% {
            background: radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.22), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.22), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.18), transparent 55%), linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        }

        50% {
            background: radial-gradient(1000px 600px at 25% 15%, rgba(56,189,248,.18), transparent 60%), radial-gradient(800px 450px at 75% 30%, rgba(34,197,94,.18), transparent 55%), radial-gradient(600px 400px at 45% 90%, rgba(20,184,166,.15), transparent 55%), linear-gradient(180deg, rgba(239,246,255,.92), rgba(240,253,250,.92));
        }

        100% {
            background: radial-gradient(950px 550px at 15% 22%, rgba(20,184,166,.20), transparent 60%), radial-gradient(850px 500px at 85% 20%, rgba(56,189,248,.15), transparent 55%), radial-gradient(750px 500px at 60% 80%, rgba(34,197,94,.15), transparent 55%), linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        }
    }

    /* Dashboard Shell */
    .dashboard-premium {
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        padding: 10px 0 25px;
    }

    .dashboard-shell {
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
        border-radius: var(--radius);
        border: 1px solid var(--border);
        background: rgba(255,255,255,.55);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: var(--shadow);
        overflow: hidden;
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Full Width Content */
    .dashboard-content-wrap-full {
        padding: 26px;
        background: rgba(255,255,255,.35);
    }

    .dashboard-card-full {
        width: 100%;
        border-radius: 20px;
        border: 1px solid rgba(15,23,42,.08);
        background: var(--glass);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 18px 45px rgba(2,6,23,.10);
        overflow: hidden;
    }

    /* Auth Components */
    .auth-head {
        padding: 22px 22px 14px;
        text-align: center;
        background: linear-gradient(135deg, rgba(34,197,94,.08), rgba(20,184,166,.06));
        border-bottom: 1px solid rgba(15,23,42,.06);
    }

    .auth-logo {
        width: 54px;
        height: 54px;
        border-radius: 16px;
        margin: 0 auto 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        background: linear-gradient(135deg, var(--eco-green), var(--eco-teal));
        box-shadow: 0 12px 25px rgba(20,184,166,.18);
        font-size: 1.35rem;
    }

    .auth-body {
        padding: 0 22px 18px;
    }

    .auth-foot {
        padding: 14px 22px;
        text-align: center;
        background: rgba(255,255,255,.55);
        border-top: 1px solid rgba(15,23,42,.08);
    }

    /* Premium Cards */
    .premium-card {
        border: 1px solid rgba(15,23,42,.08);
        background: rgba(255,255,255,.82);
        backdrop-filter: blur(8px);
        border-radius: 16px;
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

        .premium-card:hover {
            box-shadow: 0 15px 35px rgba(2,6,23,.10);
            transform: translateY(-3px);
        }

    /* Material Order Card */
    .material-order-card {
        border: 1px solid rgba(15,23,42,.08);
        background: rgba(255,255,255,.92);
        backdrop-filter: blur(8px);
        border-radius: 16px;
        transition: all 0.3s ease;
    }

        .material-order-card:hover {
            box-shadow: 0 12px 30px rgba(2,6,23,.08);
            transform: translateY(-2px);
        }

    /* Breadcrumb */
    .breadcrumb {
        background-color: transparent;
        padding: 12px 0;
        margin-bottom: 0;
    }

    .breadcrumb-item a {
        text-decoration: none;
        color: var(--muted);
        transition: color 0.2s ease;
    }

        .breadcrumb-item a:hover {
            color: var(--eco-green);
        }

    .breadcrumb-item.active {
        color: var(--ink);
        font-weight: 500;
    }

    /* Text Label Classes - Adaptive for Light/Dark Mode */
    .text-label {
        color: var(--ink) !important;
    }

    .text-section-title {
        color: var(--ink) !important;
        font-weight: 600;
    }

    /* Order ID */
    .order-id {
        min-width: 140px;
    }

    .v-wrap {
        white-space: normal;
        overflow-wrap: anywhere;
        word-break: break-word;
    }

    /* Buttons */
    .btn-outline-warning {
        border-color: rgba(255,193,7,.3);
        color: #ffc107;
        border-radius: 8px;
        padding: 6px 12px;
    }

        .btn-outline-warning:hover {
            background-color: rgba(255,193,7,.1);
            border-color: #ffc107;
            transform: translateY(-1px);
        }

    .btn-outline-danger {
        border-color: rgba(220,53,69,.3);
        color: #dc3545;
        border-radius: 8px;
        padding: 6px 12px;
    }

        .btn-outline-danger:hover {
            background-color: rgba(220,53,69,.1);
            border-color: #dc3545;
            transform: translateY(-1px);
        }

    /* Photos */
    .photos-box {
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
    }

    .img-placeholder {
        width: 140px;
        height: 92px;
        border-radius: 14px;
        border: 1px solid rgba(15,23,42,.08);
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 22px;
        transition: all 0.2s ease;
    }

    .img-one-wrap {
        display: inline-block;
        width: 140px;
        height: 92px;
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid rgba(15,23,42,.08);
        background: #f8f9fa;
        box-shadow: 0 6px 16px rgba(0,0,0,0.06);
        transition: all 0.2s ease;
    }

        .img-one-wrap:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.10);
        }

    .img-one {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform .25s ease;
    }

    .img-one-wrap:hover .img-one {
        transform: scale(1.04);
    }

    .mini-carousel {
        width: 140px;
        height: 92px;
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid rgba(15,23,42,.08);
        background: #f8f9fa;
        box-shadow: 0 6px 16px rgba(0,0,0,0.06);
        position: relative;
        transition: all 0.2s ease;
    }

        .mini-carousel:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.10);
        }

    .mini-img {
        width: 140px;
        height: 92px;
        object-fit: cover;
        display: block;
    }

    .mini-control {
        width: 30px;
        opacity: .95;
        transition: opacity 0.2s ease;
    }

    .mini-carousel:hover .mini-control {
        opacity: 1;
    }

    .mini-control .carousel-control-prev-icon,
    .mini-control .carousel-control-next-icon {
        filter: drop-shadow(0 2px 6px rgba(0,0,0,.35));
    }

    .mini-dots {
        position: absolute;
        left: 10px;
        right: 10px;
        bottom: 7px;
        display: flex;
        gap: 4px;
        justify-content: center;
        align-items: center;
        z-index: 5;
    }

        .mini-dots button {
            width: 12px;
            height: 4px;
            border-radius: 999px;
            border: 0;
            background: rgba(255,255,255,.55);
            padding: 0;
            transition: all 0.2s ease;
        }

            .mini-dots button.active {
                background: rgba(255,255,255,.95);
                width: 16px;
            }

            .mini-dots button:hover {
                background: rgba(255,255,255,.75);
            }

    /* Boxes */
    .box {
        border: 1px solid rgba(15,23,42,.08);
        border-radius: 14px;
        padding: 12px;
        background: #fff;
        transition: all 0.3s ease;
    }

        .box:hover {
            box-shadow: 0 8px 20px rgba(2,6,23,.05);
        }

    .soft {
        background: rgba(248,249,250,.55);
    }

    .box-title {
        font-weight: 800;
        font-size: .95rem;
        color: var(--ink);
        display: flex;
        align-items: center;
        gap: .35rem;
    }

    .kv-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 12px;
    }

    .kv {
        display: grid;
        grid-template-columns: 120px 1fr;
        gap: 10px 12px;
        align-items: start;
    }

    .k {
        color: var(--muted);
        font-size: .85rem;
        white-space: nowrap;
        padding-top: 2px;
    }

    .v {
        font-weight: 800;
        font-size: .92rem;
        line-height: 1.25rem;
    }

    /* ===================== DARK MODE TUNING ===================== */
    [data-bs-theme="dark"] body {
        background: radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.12), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.12), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.10), transparent 55%), linear-gradient(180deg, rgba(2,6,23,.92), rgba(15,23,42,.92));
        animation: gradientShiftDark 20s ease infinite alternate;
    }

    @@keyframes gradientShiftDark {
        0% {
            background: radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.12), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.12), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.10), transparent 55%), linear-gradient(180deg, rgba(2,6,23,.92), rgba(15,23,42,.92));
        }

        50% {
            background: radial-gradient(1000px 600px at 25% 15%, rgba(56,189,248,.10), transparent 60%), radial-gradient(800px 450px at 75% 30%, rgba(34,197,94,.10), transparent 55%), radial-gradient(600px 400px at 45% 90%, rgba(20,184,166,.08), transparent 55%), linear-gradient(180deg, rgba(15,23,42,.92), rgba(2,6,23,.92));
