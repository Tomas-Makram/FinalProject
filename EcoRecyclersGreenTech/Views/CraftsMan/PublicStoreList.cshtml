@model IEnumerable<EcoRecyclersGreenTech.Models.FactoryStore.FactoryStoreModel>
@using System.Globalization

@{
    ViewData["Title"] = ViewBag.Title as string ?? "Store";
    var nonce = Context.Items["CSPNonce"] as string ?? string.Empty;

    // Filter VM from ViewBag (we'll pass it from controller)
    var f = ViewBag.Filter as EcoRecyclersGreenTech.Models.CraftsMan.CraftsManStoreFilterModel
            ?? new EcoRecyclersGreenTech.Models.CraftsMan.CraftsManStoreFilterModel();

    var userAddress = ViewBag.UserAddress as string ?? "";
    var mySkill = ViewBag.MySkillType as string ?? "";
    var myExpYears = (int?)ViewBag.MyExperienceYears ?? 0;

    // optional maps
    var matchMap = ViewBag.MatchMap as IDictionary<int, double>;
    var distanceMap = ViewBag.DistanceMap as IDictionary<int, double>;

    string StatusBadge(string? status)
    {
        var s = (status ?? "").Trim().ToLowerInvariant();
        return s switch
        {
            "available" => "bg-success",
            "soldout" or "sold out" => "bg-secondary",
            "reserved" => "bg-warning text-dark",
            "inactive" => "bg-danger",
            "pending" => "bg-info text-dark",
            _ => "bg-secondary"
        };
    }

    string TypeIcon(string? type)
    {
        return (type ?? "").Trim() switch
        {
            "Material" => "bi-boxes",
            "Machine" => "bi-gear",
            "Rental" => "bi-building",
            "Job" => "bi-briefcase",
            "Auction" => "bi-hammer",
            _ => "bi-shop"
        };
    }

    string DetailsAction(string? type)
    {
        return (type ?? "").Trim() switch
        {
            "Material" => "MaterialDetails",
            "Machine" => "MachineDetails",
            "Rental" => "RentalDetails",
            "Auction" => "AuctionDetails",
            "Job" => "JobDetails",
            _ => "MaterialDetails"
        };
    }
}

<div class="dashboard-premium">
    <div class="container">
        <div class="dashboard-shell">
            <div class="dashboard-content-wrap-full">
                <div class="dashboard-card-full">

                    <!-- Header -->
                    <div class="auth-head">
                        <div class="auth-logo">
                            <i class="bi bi-shop"></i>
                        </div>
                        <h3 class="mb-1">@ViewData["Title"]</h3>
                        <p class="mb-0 text-muted small">Only available listings from verified sellers</p>
                    </div>

                    <div class="auth-body">
                        <!-- Breadcrumb -->
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="CraftsMan">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>

                        <!-- Alerts -->
                        @if (TempData["Success"] != null)
                        {
                            <div class="premium-card alert alert-success mb-4">
                                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="premium-card alert alert-danger mb-4">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Warning"] != null)
                        {
                            <div class="premium-card alert alert-warning mb-4">
                                <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["Warning"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- User Info -->
                        <div class="premium-card mb-4">
                            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="stat-icon bg-primary-subtle text-primary">
                                        <i class="bi bi-geo-alt fs-2"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-1 text-section-title">Your Profile</h5>
                                        <p class="text-muted small mb-0 text-label">
                                            <i class="bi bi-geo-alt me-1"></i>
                                            Location: <span class="fw-semibold">@(!string.IsNullOrWhiteSpace(userAddress) ? userAddress : "No address saved")</span>
                                        </p>
                                        @if (!string.IsNullOrWhiteSpace(mySkill))
                                        {
                                            <p class="text-muted small mb-0 text-label">
                                                <i class="bi bi-person-workspace me-1"></i>
                                                Skill: <span class="fw-semibold">@mySkill</span>
                                                <span class="text-muted">(@myExpYears years experience)</span>
                                            </p>
                                        }
                                    </div>
                                </div>
                                <div>
                                    <a asp-action="Index" asp-controller="CraftsMan" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Filters -->
                        <div class="premium-card mb-4">
                            <h5 class="text-section-title mb-3">
                                <i class="bi bi-funnel me-2 text-primary"></i>Search & Filter
                            </h5>

                            <form method="get" class="row g-3 align-items-end">
                                <div class="col-md-4">
                                    <label class="form-label small text-muted text-label">Search</label>
                                    <input name="Q" value="@f.Q" class="form-control" placeholder="Type, description, skills..." />
                                </div>

                                <div class="col-md-2">
                                    <label class="form-label small text-muted text-label">Min Price</label>
                                    <input name="MinPrice" value="@(f.MinPrice?.ToString(CultureInfo.InvariantCulture) ?? "")"
                                           type="number" step="0.01" min="0" class="form-control" />
                                </div>

                                <div class="col-md-2">
                                    <label class="form-label small text-muted text-label">Max Price</label>
                                    <input name="MaxPrice" value="@(f.MaxPrice?.ToString(CultureInfo.InvariantCulture) ?? "")"
                                           type="number" step="0.01" min="0" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label small text-muted text-label">Experience Level (Jobs)</label>
                                    <input name="ExperienceLevel" value="@f.ExperienceLevel"
                                           class="form-control" placeholder="Junior, Senior..." />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label small text-muted text-label">Location contains</label>
                                    <input name="Location" value="@f.Location"
                                           class="form-control" placeholder="Cairo, Giza..." />
                                </div>

                                <div class="col-md-2">
                                    <label class="form-label small text-muted text-label">Max Distance (km)</label>
                                    <input name="MaxKm" value="@(f.MaxKm?.ToString(CultureInfo.InvariantCulture) ?? "")"
                                           type="number" min="1" step="1" class="form-control" placeholder="Uses your profile GPS" />
                                    <small class="text-muted text-label">Uses your saved GPS</small>
                                </div>

                                <div class="col-md-3">
                                    <label class="form-label small text-muted text-label">Sort</label>
                                    <select class="form-select" name="SortBy">
                                        <option value="newest" selected="@(f.SortBy == "newest")">Newest</option>
                                        <option value="price" selected="@(f.SortBy == "price")">Price</option>
                                        <option value="distance" selected="@(f.SortBy == "distance")">Distance</option>
                                    </select>
                                </div>

                                <div class="col-md-1">
                                    <label class="form-label small text-muted text-label">Dir</label>
                                    <select class="form-select" name="SortDir">
                                        <option value="desc" selected="@(f.SortDir == "desc")">Desc</option>
                                        <option value="asc" selected="@(f.SortDir == "asc")">Asc</option>
                                    </select>
                                </div>

                                <!-- AI Agent -->
                                <div class="col-md-4">
                                    <label class="form-label small text-muted text-label">Smart Filter</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="UseSmartSkillFilter" value="true"
                                        @(f.UseSmartSkillFilter ? "checked" : "") />
                                        <label class="form-check-label text-label">
                                            Auto-match based on my saved Skill + Experience
                                        </label>
                                    </div>
                                    <div class="form-text text-label">
                                        The system matches your profile data against (type, description, and required skills).
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <label class="form-label small text-muted text-label">AI Threshold</label>
                                    <input name="SmartThreshold"
                                           value="@(f.SmartThreshold.ToString(CultureInfo.InvariantCulture))"
                                           type="number" step="0.01" min="0" max="1" class="form-control" />
                                    <small class="text-muted text-label">Example: 0.12 - 0.25</small>
                                </div>

                                <div class="col-md-2">
                                    <button class="auth-btn-primary w-100" type="submit">
                                        <i class="bi bi-funnel me-2"></i>Apply
                                    </button>
                                </div>

                                <div class="col-md-2">
                                    <a class="btn btn-outline-secondary w-100" href="@Context.Request.Path">
                                        <i class="bi bi-x-circle me-2"></i>Clear
                                    </a>
                                </div>
                            </form>
                        </div>

                        <!-- Grid -->
                        @if (Model != null && Model.Any())
                        {
                            <div class="row g-4">
                                @foreach (var item in Model)
                                {
                                    var title = item.Type == "Job"
                                    ? (item.JobType ?? item.Name ?? "Job")
                                    : (item.Name ?? item.Type ?? "Item");

                                    var desc = item.Description;

                                    // distance (if available)
                                    double? km = null;
                                    if (distanceMap != null && distanceMap.TryGetValue(item.Id, out var d)) km = d;

                                    // match (AI)
                                    int? matchPct = null;
                                    if (matchMap != null && matchMap.TryGetValue(item.Id, out var sc))
                                        matchPct = (int)Math.Round(sc * 100);

                                    var img = item.ImageUrl ?? item.ImageUrls?.FirstOrDefault();

                                    <div class="col-xl-3 col-lg-4 col-md-6">
                                        <div class="premium-card store-card h-100">

                                            <!-- Media -->
                                            <div class="position-relative">
                                                @if (!string.IsNullOrWhiteSpace(img))
                                                {
                                                    <img src="@img" class="w-100 store-img" alt="@title" />
                                                }
                                                else
                                                {
                                                    <div class="w-100 store-img bg-light-subtle d-flex align-items-center justify-content-center">
                                                        <i class="bi bi-image fs-1 text-muted"></i>
                                                    </div>
                                                }

                                                <div class="position-absolute top-0 start-0 m-2 d-flex gap-2 flex-wrap">
                                                    <span class="badge rounded-pill bg-dark">
                                                        <i class="bi @TypeIcon(item.Type) me-1"></i>@item.Type
                                                    </span>

                                                    @if (matchPct.HasValue)
                                                    {
                                                        <span class="badge rounded-pill bg-primary">
                                                            <i class="bi bi-stars me-1"></i>@matchPct% match
                                                        </span>
                                                    }

                                                    @if (km.HasValue)
                                                    {
                                                        <span class="badge rounded-pill bg-secondary">
                                                            <i class="bi bi-geo me-1"></i>@km.Value.ToString("0.0") km
                                                        </span>
                                                    }
                                                </div>

                                                <div class="position-absolute top-0 end-0 m-2">
                                                    <span class="badge rounded-pill @StatusBadge(item.Status)">
                                                        @item.Status
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Body -->
                                            <div class="card-body">
                                                <h6 class="fw-bold mb-1 text-truncate text-label" title="@title">@title</h6>

                                                <div class="small text-muted mb-2 d-flex align-items-center justify-content-between">
                                                    <span class="text-truncate text-label">
                                                        <i class="bi bi-person-check me-1"></i>@(item.SellerName ?? "Seller")
                                                    </span>
                                                    @if (item.IsVerifiedSeller)
                                                    {
                                                        <span class="badge bg-success ms-2">Verified</span>
                                                    }
                                                </div>

                                                <!-- DETAILS BOX -->
                                                <div class="details-box">
                                                    @if (item.Type == "Rental")
                                                    {
                                                        <div class="kv">
                                                            <div class="k text-label"><i class="bi bi-geo-alt me-1"></i>Location</div>
                                                            <div class="v v-wrap text-label">@(!string.IsNullOrWhiteSpace(item.RentalAddress) ? item.RentalAddress : "-")</div>

                                                            <div class="k text-label"><i class="bi bi-calendar3 me-1"></i>From</div>
                                                            <div class="v text-label">@((item.AvailableFrom?.ToString("yyyy-MM-dd") ?? "-"))</div>

                                                            <div class="k text-label"><i class="bi bi-calendar3 me-1"></i>Until</div>
                                                            <div class="v text-label">@((item.AvailableUntil?.ToString("yyyy-MM-dd") ?? "-"))</div>
                                                        </div>
                                                    }
                                                    else if (item.Type == "Job")
                                                    {
                                                        <div class="kv">
                                                            <div class="k text-label"><i class="bi bi-geo-alt me-1"></i>Location</div>
                                                            <div class="v v-wrap text-label">@(!string.IsNullOrWhiteSpace(item.JobLocation) ? item.JobLocation : "-")</div>

                                                            <div class="k text-label"><i class="bi bi-award me-1"></i>Level</div>
                                                            <div class="v text-label">@(!string.IsNullOrWhiteSpace(item.ExperienceLevel) ? item.ExperienceLevel : "-")</div>
                                                        </div>
                                                    }
                                                    else if (item.Type == "Machine")
                                                    {
                                                        <div class="kv">
                                                            <div class="k text-label"><i class="bi bi-gear me-1"></i>Type</div>
                                                            <div class="v text-label">@(!string.IsNullOrWhiteSpace(item.MachineType) ? item.MachineType : (item.Name ?? "Machine"))</div>

                                                            <div class="k text-label"><i class="bi bi-boxes me-1"></i>Quantity</div>
                                                            <div class="v text-label">@item.AvailableQuantity</div>

                                                            <div class="k text-label"><i class="bi bi-shield-check me-1"></i>Condition</div>
                                                            <div class="v text-label">@(!string.IsNullOrWhiteSpace(item.MachineCondition) ? item.MachineCondition : "-")</div>

                                                            <div class="k text-label"><i class="bi bi-tag me-1"></i>Brand</div>
                                                            <div class="v text-label">@($"{item.Brand} {item.Model}".Trim())</div>
                                                        </div>
                                                    }
                                                    else if (item.Type == "Material")
                                                    {
                                                        <!-- ✅ FIXED: clean grid layout that wraps long pickup addresses -->
                                                        <div class="kv">
                                                            <div class="k text-label"><i class="bi bi-boxes me-1"></i>Stock</div>
                                                            <div class="v text-label">@item.AvailableQuantity @(item.Unit ?? "")</div>

                                                            <div class="k text-label"><i class="bi bi-cart-check me-1"></i>Min Order</div>
                                                            <div class="v text-label">@((item.MinOrderQuantity ?? 1).ToString(CultureInfo.InvariantCulture))</div>

                                                            <div class="k text-label"><i class="bi bi-geo-alt me-1"></i>Pickup</div>
                                                            <div class="v v-wrap text-label">@(!string.IsNullOrWhiteSpace(item.FactoryAddress) ? item.FactoryAddress : "Not specified")</div>

                                                            <div class="k text-label"><i class="bi bi-receipt me-1"></i>Orders</div>
                                                            <div class="v text-label">
                                                                @item.OrdersCount
                                                                @if (item.ActiveOrdersCount > 0)
                                                                {
                                                                    <span class="text-muted">(@item.ActiveOrdersCount Active)</span>
                                                                }
                                                            </div>
                                                        </div>
                                                    }
                                                    else if (item.Type == "Auction")
                                                    {
                                                        var now = DateTime.UtcNow;

                                                        var start = item.AuctionStartDate;
                                                        var end = item.AuctionEndDate;

                                                        bool hasStart = start.HasValue;
                                                        bool hasEnd = end.HasValue;

                                                        bool notStarted = hasStart && now < start.Value;
                                                        bool ended = item.IsAuctionEnded == true || (hasEnd && now > end.Value);

                                                        string fmtDate(DateTime? d) => d.HasValue ? d.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm") : "-";

                                                        string timeUntil(DateTime targetUtc)
                                                        {
                                                            var ts = targetUtc - now;
                                                            if (ts.TotalSeconds <= 0) return "now";
                                                            if (ts.TotalDays >= 1) return $"{(int)ts.TotalDays}d {ts.Hours}h";
                                                            if (ts.TotalHours >= 1) return $"{(int)ts.TotalHours}h {ts.Minutes}m";
                                                            return $"{ts.Minutes}m";
                                                        }

                                                        <div class="kv">

                                                            <div class="k text-label"><i class="bi bi-hammer me-1"></i>Type</div>
                                                            <div class="v text-label">@(!string.IsNullOrWhiteSpace(item.Name) ? item.Name : (!string.IsNullOrWhiteSpace(item.ProductType) ? item.ProductType : "-"))</div>

                                                            <div class="k text-label"><i class="bi bi-boxes me-1"></i>Qty</div>
                                                            <div class="v text-label">@item.AvailableQuantity @(item.Unit ?? "")</div>

                                                            <div class="k text-label"><i class="bi bi-cash-stack me-1"></i>Start</div>
                                                            <div class="v text-label">@item.Price.ToString("N2")</div>

                                                            <div class="k text-label"><i class="bi bi-calendar-event me-1"></i>Opens</div>
                                                            <div class="v text-label">@fmtDate(start)</div>

                                                            <div class="k text-label"><i class="bi bi-calendar-x me-1"></i>Ends</div>
                                                            <div class="v text-label">@fmtDate(end)</div>

                                                            <div class="k text-label"><i class="bi bi-activity me-1"></i>Status</div>
                                                            <div class="v text-label">
                                                                @if (ended)
                                                                {
                                                                    <span class="badge bg-danger">Ended</span>
                                                                }
                                                                else if (notStarted)
                                                                {
                                                                    <span class="badge bg-warning text-dark">Starts in @timeUntil(start!.Value)</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-success">Live</span>
                                                                    @if (hasEnd)
                                                                    {
                                                                        <span class="text-muted ms-1 text-label">(ends in @timeUntil(end!.Value))</span>
                                                                    }
                                                                }
                                                            </div>

                                                            <div class="k text-label"><i class="bi bi-receipt me-1"></i>Bids</div>
                                                            <div class="v text-label">
                                                                @item.OrdersCount
                                                                @if (item.ActiveOrdersCount > 0)
                                                                {
                                                                    <span class="text-muted text-label">(@item.ActiveOrdersCount Active)</span>
                                                                }
                                                            </div>

                                                            @if (item.TopBidAmount.HasValue)
                                                            {
                                                                <div class="k text-label"><i class="bi bi-trophy me-1"></i>Top</div>
                                                                <div class="v text-label">
                                                                    @item.TopBidAmount.Value.ToString("N2")
                                                                    @if (!string.IsNullOrWhiteSpace(item.TopBidderName))
                                                                    {
                                                                        <span class="text-muted text-label">— @item.TopBidderName</span>
                                                                    }
                                                                </div>
                                                            }

                                                            @if (!string.IsNullOrWhiteSpace(item.AuctionAddress) || !string.IsNullOrWhiteSpace(item.FactoryAddress))
                                                            {
                                                                <div class="k text-label"><i class="bi bi-geo-alt me-1"></i>Pickup</div>
                                                                <div class="v v-wrap text-label">@(!string.IsNullOrWhiteSpace(item.AuctionAddress) ? item.AuctionAddress : item.FactoryAddress)</div>
                                                            }
                                                        </div>
                                                    }
                                                </div>

                                                @if (!string.IsNullOrWhiteSpace(desc))
                                                {
                                                    <div class="mt-2 small text-muted desc-2 text-label">
                                                        @desc
                                                    </div>
                                                }

                                                <!-- Footer row: Price + Details -->
                                                <div class="d-flex justify-content-between align-items-center mt-3">
                                                    <div class="fw-bold price text-label">
                                                        @if (item.Type == "Job")
                                                        {
                                                            <span>@((item.JobSalary ?? 0).ToString("N2"))</span>
                                                            <small class="text-muted text-label"> / salary</small>
                                                        }
                                                        else if (item.Type == "Rental")
                                                        {
                                                            <span>@(item.Price.ToString("N2"))</span>
                                                            <small class="text-muted text-label"> / month</small>
                                                        }
                                                        else
                                                        {
                                                            <span>@(item.Price.ToString("N2"))</span>
                                                        }
                                                    </div>

                                                    @{
                                                        bool isAuction = item.Type == "Auction";
                                                        var nowUtc = DateTime.UtcNow;
                                                        bool auctionNotStarted = false;
                                                    }

                                                    @if (auctionNotStarted)
                                                    {
                                                        <div class="text-end">
                                                            <div class="small text-muted text-label">
                                                                <i class="bi bi-lock me-1"></i>
                                                                Auction opens at
                                                                <span class="fw-semibold">@item.AuctionStartDate!.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</span>
                                                            </div>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-sm btn-outline-primary"
                                                           asp-controller="CraftsMan"
                                                           asp-action="@DetailsAction(item.Type)"
                                                           asp-route-id="@item.Id">
                                                            Details <i class="bi bi-arrow-right ms-1"></i>
                                                        </a>
                                                    }

                                                </div>
                                            </div>

                                            <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-3">
                                                <div class="text-muted small text-label">
                                                    <i class="bi bi-clock me-1"></i>@item.CreatedAt.ToString("yyyy-MM-dd")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="premium-card text-center py-5">
                                <div class="mb-4">
                                    <i class="bi bi-search fs-1 text-muted opacity-50" style="font-size: 4rem;"></i>
                                </div>
                                <h5 class="h6 text-muted mb-2 text-label">No items found</h5>
                                <p class="text-muted small text-label">Try adjusting your search filters or clear them to see all available listings</p>
                            </div>
                        }
                    </div>

                    <div class="auth-foot">
                        <small class="text-muted">© @DateTime.Now.Year EcoRecyclers GreenTech • @ViewData["Title"]</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style nonce="@nonce">
    /* ===================== PREMIUM STORE STYLES ===================== */
    :root {
        --eco-green: #16a34a;
        --eco-teal: #14b8a6;
        --eco-sky: #38bdf8;
        --ink: #0f172a;
        --muted: #64748b;
        --glass: rgba(255,255,255,.72);
        --border: rgba(2,132,199,.18);
        --shadow: 0 22px 60px rgba(2,6,23,.12);
        --radius: 22px;
    }

    /* Animated background */
    body {
        background: radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.22), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.22), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.18), transparent 55%), linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
        min-height: 100vh;
        animation: gradientShift 20s ease infinite alternate;
    }

    @@keyframes gradientShift {
        0% {
            background: radial-gradient(900px 500px at 18% 18%, rgba(34,197,94,.22), transparent 60%), radial-gradient(900px 500px at 80% 25%, rgba(56,189,248,.22), transparent 55%), radial-gradient(700px 450px at 55% 85%, rgba(20,184,166,.18), transparent 55%), linear-gradient(180deg, rgba(240,253,250,.92), rgba(239,246,255,.92));
