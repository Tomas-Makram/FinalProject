                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link @(IsActive("Home", "Setting") ? "active" : "")"
                                           asp-controller="Home" asp-action="Setting">
                                            <i class="bi bi-gear me-1"></i>Settings
                                        </a>
