                                        <a class="nav-link fw-semibold @(IsActive("CraftsMan", "Index") ? "active" : "")"
                                           asp-controller="CraftsMan" asp-action="Index">
                                            <i class="bi bi-calendar-check me-1"></i>Dashboard
