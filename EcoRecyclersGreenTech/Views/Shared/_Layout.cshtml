    <!-- ==================== SCRIPTS ==================== -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" nonce="@nonce"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" nonce="@nonce"></script>
    <script src="~/js/site.js" asp-append-version="true" nonce="@nonce"></script>

    <!-- ==================== CUSTOM SCRIPTS ==================== -->
    <script nonce="@nonce">
        document.addEventListener('DOMContentLoaded', function () {
            const pageLoader = document.getElementById('pageLoader');
            const themeToggleBtn = document.getElementById('themeToggle');
            const floatingLeaves = document.getElementById('floatingLeaves');

            function generateFloatingLeaves() {
                if (!floatingLeaves) return;
                floatingLeaves.innerHTML = "";
                for (let i = 0; i < 10; i++) {
                    const leaf = document.createElement('div');
                    leaf.className = 'leaf';
                    leaf.style.left = `${Math.random() * 100}%`;
                    leaf.style.animationDelay = `${Math.random() * 4}s`;
                    leaf.style.animationDuration = `${7 + Math.random() * 6}s`;
                    leaf.style.transform = `scale(${0.5 + Math.random() * 0.6}) rotate(${Math.random() * 360}deg)`;
                    leaf.style.opacity = `${0.25 + Math.random() * 0.35}`;
                    floatingLeaves.appendChild(leaf);
                }
            }

            function createAndSubmitThemeForm() {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/Theme/ToggleTheme';
                form.style.display = 'none';

                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                const existingToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                tokenInput.value = existingToken || '';
                form.appendChild(tokenInput);

                document.body.appendChild(form);
                form.submit();
            }

            function setupNavigationLoader() {
                document.addEventListener('click', function (e) {
                    const link = e.target.closest('a');
                    if (!link) return;

                    const href = link.getAttribute('href') || '';
                    const target = link.getAttribute('target');

                    const isExternal = /^https?:\/\//i.test(href) && !href.includes(location.host);
                    const isHash = href.startsWith('#');
                    const isJsVoid = href.startsWith('javascript:') || href === '' || href === 'void(0)';
                    const isDownload = link.hasAttribute('download');
                    const hasBootstrapToggle = link.hasAttribute('data-bs-toggle') || link.hasAttribute('data-bs-target');

                    if (hasBootstrapToggle || target === '_blank' || isExternal || isHash || isJsVoid || isDownload) return;

                    if (pageLoader) pageLoader.classList.remove('hidden');
                });
            }

            function setupFormLoader() {
                document.addEventListener('submit', function () {
                    if (pageLoader) pageLoader.classList.remove('hidden');
                });
            }

            function setupAutoHideAlerts() {
                setTimeout(() => {
                    document.querySelectorAll('.alert').forEach(alert => {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    });
                }, 5000);
            }

            generateFloatingLeaves();

            window.addEventListener('load', () => {
                setTimeout(() => {
                    if (pageLoader) pageLoader.classList.add('hidden');
                }, 700);
            });

            setupNavigationLoader();
            setupFormLoader();

            if (themeToggleBtn) {
                themeToggleBtn.addEventListener('click', createAndSubmitThemeForm);
            }

            setupAutoHideAlerts();

            window.addEventListener('error', function (e) {
                console.error('Page error:', e.error);
                if (pageLoader && !pageLoader.classList.contains('hidden')) {
                    pageLoader.classList.add('hidden');
                }
            });
        });

        window.addEventListener('beforeunload', function () {
            const pageLoader = document.getElementById('pageLoader');
            if (pageLoader) pageLoader.classList.remove('hidden');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
