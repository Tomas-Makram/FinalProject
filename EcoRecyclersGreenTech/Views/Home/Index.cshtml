@{
    bool logged = ViewBag.UserLoggedIn ?? false;
}

<h1>Eco Recyclers Green Tech</h1>

@if (logged)
{
    <p>Welcome @ViewBag.Email 🎉</p>
    <p>Welcome @ViewBag.type 🎉</p>

    <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger">
            Logout
        </button>
    </form>

    <a href="/Settings" class="btn btn-primary">Settings</a>
}
else
{
    <a href="/Auth/Login" class="btn btn-success">Login</a>
    <a href="/Auth/Signup" class="btn btn-info">Signup</a>
}
