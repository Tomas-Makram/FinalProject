@model EcoRecyclersGreenTech.Models.Home.HomeIndexModel
@using EcoRecyclersGreenTech.Models.Home

@{
    ViewBag.Title = "Home";

    string type = (Model.Type ?? "").Trim();
    bool logged = Model.Logged;

    string BadgeClass(string status) => status switch
    {
        "Pending" => "bg-secondary",
        "Confirmed" => "bg-info",
        "Processing" => "bg-primary",
        "ReadyForPickup" => "bg-warning text-dark",
        "Shipped" => "bg-primary",
        "PickedUp" => "bg-success",
        "Delivered" => "bg-success",
        "Completed" => "bg-success",
        "Cancelled" => "bg-danger",
        _ => "bg-dark"
    };

    string SourceIcon(string src) => src switch
    {
        "Material" => "bi-box-seam",
        "Machine" => "bi-gear-fill",
        "Auction" => "bi-hammer",
        "Rental" => "bi-house-door-fill",
        "Job" => "bi-briefcase-fill",
        _ => "bi-grid"
    };
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

@if (logged)
{
    @if (TempData["VerificationMessage"] != null && TempData["ShowVerificationAlert"]?.ToString() == "true")
    {
        <div class="alert alert-info alert-dismissible fade show shadow-lg premium-alert" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-envelope-check-fill fs-3 me-3 text-primary"></i>
                <div>
                    <h5 class="alert-heading mb-1">📨 Verification Required</h5>
                    <p class="mb-0">@TempData["VerificationMessage"]</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="dashboard-premium">
        <div class="container">
            <div class="dashboard-shell">
                <div class="row g-0 align-items-stretch">

                    <!-- ================= LEFT HERO SIDEBAR ================= -->
                    <div class="col-lg-4 d-none d-lg-flex">
                        <div class="dashboard-hero w-100">
                            <div class="hero-top">
                                <div class="hero-badge">
                                    <i class="bi bi-recycle me-2"></i>
                                    EcoRecyclers GreenTech
                                </div>
                            </div>

                            <div class="hero-mid">
                                <h1 class="hero-title">Dashboard</h1>
                                <p class="hero-sub">
                                    Welcome back to your eco-friendly dashboard. Manage your orders, track activities, and contribute to a greener future.
                                </p>

                                <div class="user-welcome-box">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-placeholder">
                                            <i class="bi bi-person-circle"></i>
                                        </div>
                                        <div class="ms-3">
                                            <h5 class="mb-0">@Model.Email</h5>
                                            <span class="badge role-badge">@type</span>
                                        </div>
                                    </div>
                                </div>

                                <ul class="hero-list">
                                    <li><span class="dot"></span> Track orders & requests</li>
                                    <li><span class="dot"></span> Manage factory operations</li>
                                    <li><span class="dot"></span> Eco-friendly analytics</li>
                                </ul>
                            </div>

